        </svg>
      </a>

      <!-- Hamburger Button (always visible, desktop + mobile) -->
      <HamburgerButton />
    </div>
  </div>
</nav>

<!-- Menu Sidebar (mobile + desktop) -->
<MobileMenu locale={locale} />

<style>
  /* Navbar No Hero Styles */
  .navbar-no-hero {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: translateY(0);
    opacity: 1;
    width: 100%;
    overflow-x: hidden;
    /* Transiciones suaves */
    transition:
      transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform, opacity;
  }

  /* Estado oculto (al hacer scroll down) */
  .navbar-no-hero.hidden {
    transform: translateY(-100%);
    opacity: 0;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 6.65rem; /* ~106px */
    padding-left: 3rem;
    padding-right: 3rem;
    max-width: 100%;
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Logo Styles */
  .navbar-logo-link {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  /* Mobile - Logo a la izquierda */
  @media (max-width: 767px) {
    .navbar-logo-link {
      position: static !important;
      left: auto !important;
      transform: none !important;
      margin-right: auto;
      margin-left: 0;
    }
  }

  .navbar-logo {
    height: 3.33rem; /* ~53px */
    width: auto;
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Right side container */
  .navbar-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  /* Desktop-only elements */
  .navbar-desktop-only {
    display: flex;
  }

  /* Responsive Mobile Behavior */
  @media (max-width: 767px) {
    /* Ocultar Instagram en mobile */
    .navbar-desktop-only {
      display: none !important;
    }

    /* Ocultar selector de idiomas en mobile */
    .navbar-languages {
      display: none !important;
    }

    /* Reducir gap en mobile */
    .navbar-right {
      gap: 1rem;
    }
  }

  /* Language Selector (Left) */
  .navbar-languages {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .navbar-lang {
    color: #1f2937; /* text-gray-800 */
    text-decoration: none;
    font-size: var(--font-size-nav-lang);
    font-weight: 500;
    opacity: 0.7;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar-lang:hover {
    opacity: 1;
  }

  .navbar-lang.active {
    opacity: 1;
    text-decoration: underline;
  }

  .navbar-separator {
    color: #9ca3af; /* text-gray-400 */
    font-size: var(--font-size-nav-lang);
    transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Instagram Icon */
  .navbar-instagram {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .navbar-instagram-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #1f2937; /* text-gray-800 */
    opacity: 0.7;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar-instagram:hover .navbar-instagram-icon {
    opacity: 1;
  }

  /* Hamburger Button Color */
  .navbar-right :global(.hamburger-button) {
    color: #1f2937; /* text-gray-800 */
    opacity: 0.7;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar-right :global(.hamburger-button:hover) {
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .navbar-container {
      height: 5.33rem; /* ~85px */
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    .navbar-logo {
      height: 2.66rem; /* ~43px */
    }
  }

  /* Accesibilidad - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .navbar-no-hero {
      transition: none;
    }
  }
</style>

<script>
  // Navbar Scroll Detection Script
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar-no-hero');
    if (!navbar) return;

    let ticking = false;
    let lastScrollY = window.scrollY;
    const scrollDelta = 5; // Mínimo scroll para detectar dirección
    const threshold = 50; // Umbral mínimo antes de activar hide/show

    function updateNavbar() {
      const scrollY = window.scrollY;
      const scrollDirection = scrollY > lastScrollY ? 'down' : 'up';
      const scrollDifference = Math.abs(scrollY - lastScrollY);

      // Solo actuar si hay un scroll significativo
      if (scrollDifference < scrollDelta) {
        lastScrollY = scrollY;
        return;
      }

      // Solo ocultar/mostrar si estamos más allá del threshold
      if (scrollY > threshold) {
        if (scrollDirection === 'down') {
          // Scrolleando hacia abajo: OCULTAR navbar
          navbar.classList.add('hidden');
        } else if (scrollDirection === 'up') {
          // Scrolleando hacia arriba: MOSTRAR navbar
          navbar.classList.remove('hidden');
        }
      } else {
        // En el top: siempre visible
        navbar.classList.remove('hidden');
      }

      lastScrollY = scrollY;
    }

    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateNavbar();
          ticking = false;
        });
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });

    window.addEventListener('beforeunload', () => {
      window.removeEventListener('scroll', onScroll);
    });
  });
</script>
