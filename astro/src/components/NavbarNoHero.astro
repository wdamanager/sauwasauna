---
/**
 * NavbarNoHero - Navbar para páginas sin hero section
 *
 * Características:
 * - Fondo blanco con sombra desde el inicio
 * - Logo negro siempre visible
 * - Comportamiento: Se oculta al scrollear DOWN, aparece al scrollear UP
 * - Usado en: Páginas legales y otras páginas sin hero section
 *
 * WDA-556: Creado para páginas legales (aviso-legal, politica-de-cookies, politica-de-privacidad)
 */

import HamburgerButton from './ui/HamburgerButton.astro';
import MobileMenu from './ui/MobileMenu.astro';
import { getLocalizedUrl, type Locale } from '../lib/i18n/routes';

interface Props {
  locale: string;
}

const { locale } = Astro.props;

// Idiomas disponibles
const languages = ['ca', 'es', 'fr', 'en'];

// Get current full path for translation
const currentPath = Astro.url.pathname;
---

<nav id="navbar-no-hero" class="navbar-no-hero" aria-label="Navigation">
  <div class="navbar-container">
    <!-- Selector de idiomas (izquierda) -->
    <div class="navbar-languages">
      {languages.map((lang, index) => {
        const href = getLocalizedUrl(currentPath, lang as Locale);
        return (
          <>
            <a
              href={href}
              class={`navbar-lang ${lang === locale ? 'active' : ''}`}
              aria-label={`Switch to ${lang.toUpperCase()}`}
            >
              {lang.toUpperCase()}
            </a>
            {index < languages.length - 1 && <span class="navbar-separator">/</span>}
          </>
        );
      })}
    </div>

    <!-- Logo (centro) -->
    <a href={`/${locale}/`} class="navbar-logo-link" aria-label="SAUWA Home">
      <img
        src="/images/logo/sauwa-black.svg"
        alt="SAUWA"
        class="navbar-logo"
      />
    </a>

    <!-- Right side: Instagram + Hamburger -->
    <div class="navbar-right">
      <!-- Instagram Icon (desktop only) -->
      <a
        href="https://www.instagram.com/sauwa.sauna/"
        target="_blank"
        rel="noopener noreferrer"
        class="navbar-instagram navbar-desktop-only"
        aria-label="Follow us on Instagram"
      >
        <svg class="navbar-instagram-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
