---
/**
 * SessionHero - Hero component para página de sesión/evento
 * WDA-902: Hero con información del evento y CTA a reserva
 *
 * Similar a JobHero pero optimizado para mostrar:
 * - Título del evento
 * - Descripción
 * - Detalles (duración, capacidad, precio)
 * - CTA para scroll a booking
 */

import type { Locale } from '../../lib/booking/types';

export interface Props {
  title: string; // SEO h1
  heading: string; // Commercial h2
  subtitle?: string;
  duration?: number; // Minutes
  capacity?: number;
  price?: number | null; // Cents, null for free
  ctaText: string;
  ctaHref?: string;
  backgroundImage: string;
  locale?: Locale;
  sessionId?: number; // For client-side hydration
}

const {
  title,
  heading,
  subtitle,
  duration,
  capacity,
  price,
  ctaText,
  ctaHref = '#reserva',
  backgroundImage,
  locale = 'es',
  sessionId,
} = Astro.props;

// Translations for event details
const translations = {
  es: {
    duration: 'Duración',
    minutes: 'minutos',
    capacity: 'Capacidad máxima',
    people: 'personas',
    price: 'Precio',
    free: 'Gratuito',
    perPerson: 'por persona',
  },
  ca: {
    duration: 'Durada',
    minutes: 'minuts',
    capacity: 'Capacitat màxima',
    people: 'persones',
    price: 'Preu',
    free: 'Gratuït',
    perPerson: 'per persona',
  },
  en: {
    duration: 'Duration',
    minutes: 'minutes',
    capacity: 'Maximum capacity',
    people: 'people',
    price: 'Price',
    free: 'Free',
    perPerson: 'per person',
  },
  fr: {
    duration: 'Durée',
    minutes: 'minutes',
    capacity: 'Capacité maximale',
    people: 'personnes',
    price: 'Prix',
    free: 'Gratuit',
    perPerson: 'par personne',
  },
};

const t = translations[locale];

// Format price
const formatPrice = (cents: number | null | undefined): string => {
  if (cents === null || cents === undefined || cents === 0) {
    return t.free;
  }
  const euros = cents / 100;
  return `${euros.toFixed(2).replace('.', ',')}€ ${t.perPerson}`;
};

const showDetails = duration || capacity || price !== undefined;
---

<section class="session-hero" data-session-id={sessionId}>
  <div class="session-hero__overlay"></div>
  <div class="session-hero__background" data-hydrate="background" style={`background-image: url('${backgroundImage}');`}></div>

  <div class="session-hero__content">
    <h1 class="session-hero__title-seo">{title}</h1>
    <h2 class="session-hero__heading" data-hydrate="heading">{heading}</h2>
    {subtitle && <p class="session-hero__subtitle" data-hydrate="subtitle">{subtitle}</p>}

    {showDetails && (
      <div class="session-hero__details">
        {duration && (
          <div class="session-hero__detail">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <div class="detail-content">
              <span class="detail-label">{t.duration}</span>
              <span class="detail-value">{duration} {t.minutes}</span>
            </div>
          </div>
        )}
        {capacity && (
          <div class="session-hero__detail">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <div class="detail-content">
              <span class="detail-label">{t.capacity}</span>
              <span class="detail-value">{capacity} {t.people}</span>
            </div>
          </div>
        )}
        {price !== undefined && (
          <div class="session-hero__detail">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2Z"></path>
              <path d="M13 5v2"></path>
              <path d="M13 17v2"></path>
              <path d="M13 11v2"></path>
            </svg>
            <div class="detail-content">
              <span class="detail-label">{t.price}</span>
              <span class="detail-value highlight">{formatPrice(price)}</span>
            </div>
          </div>
        )}
      </div>
    )}
  </div>

  <!-- CTA Button positioned at bottom -->
  <a href={ctaHref} class="session-hero__cta" aria-label={ctaText}>
    <span class="session-hero__cta-text">{ctaText}</span>
    <svg
      class="session-hero__cta-icon"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        d="M12 5L12 19M12 19L19 12M12 19L5 12"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </a>
</section>

<style>
  /* Hero con imagen de fondo y overlay oscuro */
  .session-hero {
    position: relative;
    width: 100%;
    max-width: 100vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for iOS Safari */
    min-height: 700px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .session-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .session-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 1;
  }

  .session-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
    gap: 1.5rem;
  }

  /* Jerarquía: h1 pequeño SEO, h2 grande comercial */
  /* WDA-908: Tipografía alineada con /es/guia-sauwa-sauna/ */
  .session-hero__title-seo {
    font-family: 'Avenir Next', sans-serif;
    font-weight: 400;
    font-size: 18px;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  .session-hero__heading {
    font-family: 'Helvetica Neue', 'Avenir Next', sans-serif;
    font-weight: 100;
    font-size: 56px;
    line-height: 1.2;
    color: #ffffff;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .session-hero__subtitle {
    font-family: 'Avenir Next', sans-serif;
    font-weight: 300;
    font-size: 1.125rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 700px;
  }

  /* Event Details */
  .session-hero__details {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem;
    margin-top: 1.5rem;
    padding: 1.5rem 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .session-hero__detail {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    color: white;
  }

  .detail-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    opacity: 0.8;
    margin-top: 2px;
  }

  .detail-content {
    display: flex;
    flex-direction: column;
    text-align: left;
  }

  .detail-label {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.7);
  }

  .detail-value {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: white;
  }

  .detail-value.highlight {
    color: #DB4529;
    font-size: 1.125rem;
  }

  /* CTA Button */
  .session-hero__cta {
    position: absolute;
    bottom: 3rem;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: max-content;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    color: #ffffff;
    text-decoration: none;
    transition: transform 0.3s ease, opacity 0.3s ease;
    cursor: pointer;
    z-index: 3;
    animation: bounce 2s infinite;
  }

  .session-hero__cta:hover {
    transform: translateY(4px);
    opacity: 0.9;
  }

  .session-hero__cta:focus-visible {
    outline: 2px solid #DB4529;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .session-hero__cta-text {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .session-hero__cta-icon {
    width: 24px;
    height: 24px;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  /* Mobile responsive (< 768px) */
  @media (max-width: 767px) {
    .session-hero {
      min-height: 600px;
    }

    .session-hero__content {
      padding: 0 1.5rem;
      gap: 1rem;
    }

    .session-hero__cta {
      bottom: 2rem;
    }

    /* WDA-908: Tipografía móvil alineada con /es/guia-sauwa-sauna/ */
    .session-hero__title-seo {
      font-size: 16px;
      letter-spacing: 3px;
    }

    .session-hero__heading {
      font-size: 40px;
      font-weight: 300;
      line-height: 1.2;
    }

    .session-hero__subtitle {
      font-size: 1rem;
    }

    .session-hero__details {
      flex-direction: column;
      gap: 0.875rem;
      padding: 1.25rem 1.5rem;
      width: calc(100% - 2rem);
      max-width: 340px;
    }

    .session-hero__detail {
      justify-content: flex-start;
      width: 100%;
    }

    .detail-icon {
      width: 20px;
      height: 20px;
      margin-top: 1px;
    }

    .detail-value {
      font-size: 0.9375rem;
    }

    .detail-value.highlight {
      font-size: 1rem;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .session-hero__title-seo {
      font-size: 17px;
    }

    .session-hero__heading {
      font-size: 48px;
    }

    .session-hero__subtitle {
      font-size: 1.0625rem;
    }
  }

  /* Small mobile (<= 640px) */
  @media (max-width: 640px) {
    .session-hero__title-seo {
      font-size: 14px;
      letter-spacing: 2px;
    }

    .session-hero__heading {
      font-size: 32px;
      line-height: 1.25;
    }

    .session-hero__details {
      max-width: 300px;
      padding: 1rem 1.25rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .session-hero__cta {
      animation: none;
    }

    .session-hero__cta:hover {
      transform: none;
    }
  }
</style>

<script>
  // Smooth scroll when clicking CTA
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButtons = document.querySelectorAll('.session-hero__cta');

    ctaButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const href = button.getAttribute('href');

        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>
