---
/**
 * WDA-965: Hero component para página de Partner
 * Similar a ExclusiveHero/SessionHero pero específico para partners
 *
 * Estructura:
 * - H1: "SAUWA PARTNER" (SEO, pequeño)
 * - H2: Nombre del partner (comercial, grande)
 * - Dirección con enlace a Google Maps
 * - Botón flotante de ancla a sesiones
 */

interface Props {
  title: string; // "SAUWA PARTNER" (h1 SEO)
  heading: string; // Nombre del partner (h2 comercial)
  address?: string;
  addressUrl?: string; // Google Maps URL
  ctaText: string;
  ctaHref?: string;
  backgroundImage: string;
}

const {
  title,
  heading,
  address,
  addressUrl,
  ctaText,
  ctaHref = '#sesiones',
  backgroundImage,
} = Astro.props;
---

<section class="partner-hero">
  <div class="partner-hero__overlay"></div>
  <div class="partner-hero__background" style={`background-image: url('${backgroundImage}');`}></div>

  <div class="partner-hero__content">
    <h1 class="partner-hero__title-seo">{title}</h1>
    <h2 class="partner-hero__heading">{heading}</h2>

    {address && (
      <a
        href={addressUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="partner-hero__address"
        aria-label={`Cómo llegar a ${heading}`}
      >
        <svg
          class="partner-hero__address-icon"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          aria-hidden="true"
        >
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <span class="partner-hero__address-text">{address}</span>
      </a>
    )}
  </div>

  <!-- CTA Button positioned at bottom -->
  <a href={ctaHref} class="partner-hero__cta" aria-label={ctaText}>
    <span class="partner-hero__cta-text">{ctaText}</span>
    <svg
      class="partner-hero__cta-icon"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        d="M12 5L12 19M12 19L19 12M12 19L5 12"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </a>
</section>

<style>
  /* WDA-965: Hero con imagen de fondo para Partner */
  .partner-hero {
    position: relative;
    width: 100%;
    max-width: 100vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for iOS Safari */
    min-height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .partner-hero__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .partner-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.4) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 1;
  }

  .partner-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
    gap: 1.5rem;
  }

  /* Jerarquía: h1 pequeño SEO, h2 grande comercial */
  .partner-hero__title-seo {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: var(--font-size-heading);
    letter-spacing: 2px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1.5rem 0;
  }

  .partner-hero__heading {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-weight: 100;
    font-size: 56px;
    line-height: 1.2;
    color: #ffffff;
    margin: 0 0 2.5rem 0;
    letter-spacing: normal;
  }

  /* Dirección con enlace a Google Maps - estilo texto simple */
  .partner-hero__address {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: var(--font-size-body);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .partner-hero__address:hover {
    color: rgba(255, 255, 255, 1);
  }

  .partner-hero__address:hover .partner-hero__address-text {
    text-decoration: underline;
  }

  .partner-hero__address:focus-visible {
    outline: 2px solid var(--color-primary-hover);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .partner-hero__address-icon {
    flex-shrink: 0;
    color: var(--color-primary-hover);
  }

  .partner-hero__address-text {
    transition: text-decoration 0.2s ease;
  }

  /* CTA Button */
  .partner-hero__cta {
    position: absolute;
    bottom: 3rem;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: max-content;
    z-index: 3;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem;
    color: #ffffff;
    text-decoration: none;
    transition: transform 0.3s ease, opacity 0.3s ease;
    cursor: pointer;
  }

  .partner-hero__cta:hover {
    transform: translateY(4px);
    opacity: 0.9;
  }

  .partner-hero__cta:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .partner-hero__cta-text {
    font-family: var(--font-family-primary);
    font-weight: var(--font-weight-regular);
    font-size: var(--font-scale-xs);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .partner-hero__cta-icon {
    width: 24px;
    height: 24px;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  /* Mobile responsive (< 768px) */
  @media (max-width: 767px) {
    .partner-hero {
      min-height: 500px;
      height: 100vh;
      height: 100dvh;
    }

    .partner-hero__content {
      padding: 0 1.5rem;
      gap: 1.5rem;
    }

    .partner-hero__title-seo {
      font-size: var(--font-scale-xs);
      letter-spacing: 3px;
      margin-bottom: 0;
    }

    .partner-hero__heading {
      font-size: 32px;
      font-weight: var(--font-weight-light);
      line-height: 1.3;
      margin-bottom: 0;
    }

    .partner-hero__address {
      font-size: var(--font-scale-sm);
    }

    .partner-hero__cta {
      bottom: 2rem;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .partner-hero__title-seo {
      font-size: var(--font-scale-sm);
    }

    .partner-hero__heading {
      font-size: 40px;
    }
  }

  /* Small mobile (<= 640px) */
  @media (max-width: 640px) {
    .partner-hero__title-seo {
      font-size: 14px;
      letter-spacing: 2px;
    }

    .partner-hero__heading {
      font-size: 28px;
      line-height: 1.3;
    }

    .partner-hero__address {
      font-size: 14px;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .partner-hero__cta-icon {
      animation: none;
    }

    .partner-hero__cta:hover {
      transform: none;
    }
  }
</style>

<script>
  // Smooth scroll when clicking CTA
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButtons = document.querySelectorAll('.partner-hero__cta');

    ctaButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const href = button.getAttribute('href');

        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>
