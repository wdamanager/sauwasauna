    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: 1.75rem;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
  }

  .partners-form__message-text {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
