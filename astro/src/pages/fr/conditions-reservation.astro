---
/**
 * Conditions de Sécurité et de Réservation FR - SAUWA
 * Chargement dynamique depuis WordPress avec Polylang
 */

import Layout from '../../layouts/Layout.astro';
import NavbarNoHero from '../../components/NavbarNoHero.astro';
import FooterBlack from '../../components/layout/FooterBlack.astro';
import HreflangMeta from '../../components/seo/HreflangMeta.astro';
import LegalPageClient from '../../components/legal/LegalPageClient.astro';
import { LEGAL_PAGE_IDS } from '../../lib/wordpress/polylang-client.js';
import { getHreflangPaths } from '../../lib/wordpress/legal-slugs.js';

const lang = 'fr';
const title = 'Conditions de Sécurité et de Réservation | SAUWA';
const description = 'Conditions de sécurité et de réservation pour les réservations SAUWA. Informations sur les exigences de santé, règles d\'utilisation et conditions de réservation.';
---

<Layout title={title} description={description} lang={lang} navbar="none">
  <HreflangMeta customPaths={getHreflangPaths('CONDICIONES_CONTRATACION')} slot="head" />

  <NavbarNoHero locale={lang} />

  <main class="legal-page">
    <LegalPageClient
      pageId={LEGAL_PAGE_IDS.CONDICIONES_CONTRATACION}
      pageType="conditions-reservation"
      lang="FR"
      loadingText="Chargement du contenu..."
      errorTitle="Erreur de chargement"
      errorMessage="Impossible de charger les conditions. Veuillez réessayer."
      retryText="Réessayer"
    />
  </main>

  <FooterBlack locale={lang} />
</Layout>
