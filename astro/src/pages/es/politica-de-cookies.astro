---
/**
 * Política de Cookies ES - SAUWA
 * WDA-556: Carga dinámica desde WordPress con Polylang
 */

import Layout from '../../layouts/Layout.astro';
import NavbarNoHero from '../../components/NavbarNoHero.astro';
import FooterBlack from '../../components/layout/FooterBlack.astro';
import HreflangMeta from '../../components/seo/HreflangMeta.astro';
import LegalPageClient from '../../components/legal/LegalPageClient.astro';
import { LEGAL_PAGE_IDS } from '../../lib/wordpress/polylang-client.js';
import { getHreflangPaths } from '../../lib/wordpress/legal-slugs.js';

const lang = 'es';
const title = 'Política de Cookies | SAUWA';
const description = 'Política de cookies de SAUWA. Información sobre el uso de cookies, tipos y gestión de preferencias conforme a la normativa vigente.';
---

<Layout title={title} description={description} lang={lang} navbar="none">
  <HreflangMeta customPaths={getHreflangPaths('POLITICA_COOKIES') as Record<string, string>} slot="head" />

  <NavbarNoHero locale={lang} />

  <main class="legal-page">
    <LegalPageClient
      pageId={LEGAL_PAGE_IDS.POLITICA_COOKIES}
      pageType="politica-cookies"
      lang="ES"
      loadingText="Cargando contenido..."
      errorTitle="Error al cargar el contenido"
      errorMessage="No se pudo cargar la política de cookies. Por favor, intenta nuevamente."
      retryText="Reintentar"
    />
  </main>

  <FooterBlack locale={lang} />
</Layout>
