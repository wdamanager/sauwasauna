    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Section spacing */
  .section {
    padding: 4rem 0;
  }

  .section--bg-light {
    background: #f8f8f8;
  }

  /* Partner Info Card - Layout horizontal sin bordes */
  .partner-info__card {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .partner-info__logo {
    flex-shrink: 0;
    width: 280px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .partner-info__logo img {
    width: 100%;
    height: auto;
    max-height: 140px;
    object-fit: contain;
  }

  .partner-info__details {
    flex-shrink: 0;
    width: 500px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .partner-info__item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .partner-info__icon {
    flex-shrink: 0;
    margin-top: 0.25rem;
    color: var(--color-primary);
  }

