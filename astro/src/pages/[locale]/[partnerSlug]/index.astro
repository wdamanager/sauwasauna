    color: var(--color-text-primary);
    text-decoration: none;
    transition: color 0.2s ease;
    word-break: break-word;
  }

  .partner-info__value--link:hover {
    color: var(--color-primary);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-label {
    font-family: var(--font-family-primary);
    font-size: var(--font-scale-sm);
    font-weight: var(--font-weight-regular);
    letter-spacing: var(--letter-spacing-wide);
    text-transform: uppercase;
    color: var(--color-primary-hover);
    margin: 0 0 0.75rem;
  }

  .section-title {
    font-family: var(--font-family-secondary);
    font-size: 2rem;
    font-weight: var(--font-weight-light);
    line-height: 1.3;
    color: var(--color-text-primary);
    margin: 0;
  }

  /* WDA-998: Sessions grouped by type container */
  .sessions-by-type {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .no-sessions {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  /* Responsive */
  @media (max-width: 767px) {
    .partner-info__card {
      flex-direction: column;
      align-items: center;
      gap: 2.5rem;
    }

    .partner-info__logo {
      width: 200px;
    }

    .partner-info__details {
      width: 100%;
      grid-template-columns: 1fr;
      gap: 1.5rem;
      justify-items: center;
    }

    .partner-info__item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.5rem;
    }

    .partner-info__icon {
      margin-top: 0;
    }

    .partner-info__content {
      align-items: center;
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .partner-info__card {
      flex-direction: column;
      align-items: center;
      gap: 3rem;
    }

    .partner-info__logo {
      width: 240px;
    }

    .partner-info__details {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
