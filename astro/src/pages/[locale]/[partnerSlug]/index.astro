---
/**
 * WDA-963: Dynamic Partner Detail Page
 * WDA-990: Enhanced with SSG + Client Hydration pattern
 * Route: /[locale]/[partnerSlug]/
 * Example: /es/hotel-coma-bella/
 *
 * Shows partner information and lists all their sessions
 * SSG content is rendered immediately, then hydrated with fresh data on client
 */
import type { GetStaticPaths } from 'astro';
import Layout from '../../../layouts/Layout.astro';
import NavbarScroll from '../../../components/NavbarScroll.astro';
import FooterBlack from '../../../components/layout/FooterBlack.astro';
import PartnerHero from '../../../components/partners/PartnerHero.astro';
import DynamicContent from '../../../components/core/DynamicContent.astro';
import PartnerSkeleton from '../../../components/core/skeletons/PartnerSkeleton.astro';
// WDA-998: New components for session type grouping
import SessionTypeSection from '../../../components/partners/SessionTypeSection.astro';
import { getPublicSessions, groupSessionsByType, type SessionData, type SessionType } from '../../../lib/sessions-queries';
import { generateGoogleMapsUrl } from '../../../lib/utils/maps';
import { getLocalizedValue } from '../../../lib/i18n/fallback';
import { getSessionTypesI18n } from '../../../lib/i18n/sessionTypes';

type Locale = 'es' | 'ca' | 'en' | 'fr';

interface PartnerData {
  slug: string;
  title: string;
  address?: string;
  phone?: string;
  email?: string;
  web?: string;
  heroImage?: string;
  featuredImage?: {
    sourceUrl: string;
    altText: string;
  };
  sessions: SessionData[];
}

export const getStaticPaths: GetStaticPaths = async () => {
  // Define locales inside getStaticPaths to ensure they're accessible
  const pathLocales: Array<'es' | 'ca' | 'en' | 'fr'> = ['es', 'ca', 'en', 'fr'];

  try {
    // WDA-988: Use getPublicSessions to only include sessions with availability rules
    const sessions = await getPublicSessions();

    if (!sessions || sessions.length === 0) {
      console.warn('[WDA-963] No sessions found for partner paths');
      return [];
    }

    // Group sessions by partner
    const partnerMap = new Map<string, PartnerData>();

    for (const session of sessions) {
      if (!session.partner) continue;

      const partnerSlug = session.partner.slug;

      if (!partnerMap.has(partnerSlug)) {
        partnerMap.set(partnerSlug, {
          slug: session.partner.slug,
          title: session.partner.title,
          address: session.partner.address,
          phone: session.partner.phone,
          email: session.partner.email,
          web: session.partner.web,
          heroImage: session.partner.heroImage,
          featuredImage: session.partner.featuredImage,
          sessions: [],
        });
      }

      partnerMap.get(partnerSlug)!.sessions.push(session);
    }

    // Generate paths for all locales × partners
    const paths: Array<{
      params: { locale: string; partnerSlug: string };
      props: { partner: PartnerData };
    }> = [];

    for (const [partnerSlug, partner] of partnerMap) {
      for (const locale of pathLocales) {
        paths.push({
          params: { locale, partnerSlug },
          props: { partner },
        });
      }
    }

    console.log(`[WDA-963] Generated ${paths.length} partner detail paths`);
    return paths;
  } catch (error) {
    console.error('[WDA-963] Error generating partner paths:', error);
    return [];
  }
};

const { locale, partnerSlug } = Astro.params;
const { partner } = Astro.props;

if (!partner) {
  return Astro.redirect('/404');
}

// i18n content
const i18n: Record<Locale, {
  heroTitle: string;
  heroCtaText: string;
  sessionsLabel: string;
  sessionsTitle: string;
  noSessions: string;
  people: string;
  address: string;
  phone: string;
  email: string;
  website: string;
}> = {
  es: {
    heroTitle: 'SAUWA PARTNER',
    heroCtaText: 'Ver sesiones',
    sessionsLabel: 'SESIONES DISPONIBLES',
    sessionsTitle: `Sesiones SAUWA en ${partner.title}`,
    noSessions: 'No hay sesiones disponibles en este momento',
    people: 'personas',
    address: 'Dirección',
    phone: 'Teléfono',
    email: 'Email',
    website: 'Web',
  },
  ca: {
    heroTitle: 'SAUWA PARTNER',
    heroCtaText: 'Veure sessions',
    sessionsLabel: 'SESSIONS DISPONIBLES',
    sessionsTitle: `Sessions SAUWA a ${partner.title}`,
    noSessions: 'No hi ha sessions disponibles en aquest moment',
    people: 'persones',
    address: 'Adreça',
    phone: 'Telèfon',
    email: 'Email',
    website: 'Web',
  },
  en: {
    heroTitle: 'SAUWA PARTNER',
    heroCtaText: 'View sessions',
    sessionsLabel: 'AVAILABLE SESSIONS',
    sessionsTitle: `SAUWA sessions at ${partner.title}`,
    noSessions: 'No sessions available at this time',
    people: 'people',
    address: 'Address',
    phone: 'Phone',
    email: 'Email',
    website: 'Website',
  },
  fr: {
    heroTitle: 'SAUWA PARTNER',
    heroCtaText: 'Voir les séances',
    sessionsLabel: 'SÉANCES DISPONIBLES',
    sessionsTitle: `Séances SAUWA à ${partner.title}`,
    noSessions: 'Aucune séance disponible pour le moment',
    people: 'personnes',
    address: 'Adresse',
    phone: 'Téléphone',
    email: 'Email',
    website: 'Site web',
  },
};

const t = i18n[locale as Locale] || i18n.es;

// WDA-998: Group sessions by type for organized display
const groupedSessions = groupSessionsByType(partner.sessions);

// WDA-990: Generate content hash for change detection
function generateContentHash(data: unknown): string {
  return JSON.stringify(data).split('').reduce((hash, char) => {
    return ((hash << 5) - hash) + char.charCodeAt(0);
  }, 0).toString(36);
}

const initialHash = generateContentHash({
  title: partner.title,
  address: partner.address,
  phone: partner.phone,
  email: partner.email,
  web: partner.web,
  sessions: partner.sessions.map(s => ({ id: s.slug, title: s.title, price: s.price })),
});

// SEO
const seoTitle = `${partner.title} | ${t.heroTitle}`;
const seoDescription = `${t.sessions} en ${partner.title}. SAUWA Sauna Andorra.`;

// Hero image: priority to heroImage, fallback to featuredImage
const heroImage = partner.heroImage || partner.featuredImage?.sourceUrl || '';
const addressUrl = partner.address ? generateGoogleMapsUrl(partner.address) : undefined;

// hreflang
const allLocales: Locale[] = ['es', 'ca', 'en', 'fr'];
const hreflangs = allLocales.map(loc => ({
  locale: loc,
  href: `https://sauwasauna.com/${loc}/${partnerSlug}/`,
}));
---

<Layout title={seoTitle} description={seoDescription} lang={locale} pageType="partner">
  <Fragment slot="head">
    {hreflangs.map(({ locale: loc, href }) => (
      <link rel="alternate" hreflang={loc} href={href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={hreflangs[0].href} />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDescription} />
    {heroImage && <meta property="og:image" content={heroImage} />}
  </Fragment>

  <NavbarScroll locale={locale} />

  <main class="partner-page">
    <!-- WDA-990: DynamicContent wrapper for SSG + Client Hydration -->
    <DynamicContent
      contentType="partner"
      slug={partner.slug}
      locale={locale as 'es' | 'ca' | 'en' | 'fr'}
      initialHash={initialHash}
    >
      <PartnerSkeleton slot="skeleton" showHero={false} showInfo={true} showSessions={true} sessionCount={partner.sessions.length || 3} />

      <Fragment slot="content">
        <!-- Partner Hero - WDA-965 -->
        <PartnerHero
          title={t.heroTitle}
          heading={partner.title}
          address={partner.address}
          addressUrl={addressUrl}
          ctaText={t.heroCtaText}
          ctaHref="#sesiones"
          backgroundImage={heroImage}
        />

        <!-- Partner Info Card -->
        <section class="partner-info section">
          <div class="container">
            <div class="partner-info__card">
              {partner.featuredImage && (
                <div class="partner-info__logo">
                  <img
                    src={partner.featuredImage.sourceUrl}
                    alt={partner.featuredImage.altText || partner.title}
                    loading="lazy"
                    data-dynamic="partner-logo"
                  />
                </div>
              )}

              <div class="partner-info__details">
                {partner.address && (
                  <div class="partner-info__item">
                    <svg class="partner-info__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                      <circle cx="12" cy="10" r="3"/>
                    </svg>
                    <div class="partner-info__content">
                      <span class="partner-info__label">{t.address}</span>
                      <a
                        href={addressUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="partner-info__value partner-info__value--link"
                        data-dynamic="partner-address"
                      >
                        {partner.address}
                      </a>
                    </div>
                  </div>
                )}

                {partner.phone && (
                  <div class="partner-info__item">
                    <svg class="partner-info__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                    <div class="partner-info__content">
                      <span class="partner-info__label">{t.phone}</span>
                      <a href={`tel:${partner.phone}`} class="partner-info__value partner-info__value--link" data-dynamic="partner-phone">
                        {partner.phone}
                      </a>
                    </div>
                  </div>
                )}

                {partner.email && (
                  <div class="partner-info__item">
                    <svg class="partner-info__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                      <polyline points="22,6 12,13 2,6"/>
                    </svg>
                    <div class="partner-info__content">
                      <span class="partner-info__label">{t.email}</span>
                      <a href={`mailto:${partner.email}`} class="partner-info__value partner-info__value--link" data-dynamic="partner-email">
                        {partner.email}
                      </a>
                    </div>
                  </div>
                )}

                {partner.web && (
                  <div class="partner-info__item">
                    <svg class="partner-info__icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="2" y1="12" x2="22" y2="12"/>
                      <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                    </svg>
                    <div class="partner-info__content">
                      <span class="partner-info__label">{t.website}</span>
                      <a
                        href={partner.web}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="partner-info__value partner-info__value--link"
                        data-dynamic="partner-web"
                      >
                        {new URL(partner.web).hostname.replace('www.', '')}
                      </a>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>
        </section>

        <!-- Sessions List - WDA-998: Grouped by type -->
        <section id="sesiones" class="partner-sessions section section--bg-light">
          <div class="container">
            {partner.sessions.length > 0 ? (
              <div class="sessions-by-type" data-dynamic="sessions-list">
                {Array.from(groupedSessions).map(([type, sessions]) => (
                  <SessionTypeSection
                    type={type}
                    sessions={sessions}
                    locale={locale as 'es' | 'ca' | 'en' | 'fr'}
                    partnerSlug={partnerSlug}
                  />
                ))}
              </div>
            ) : (
              <p class="no-sessions">{t.noSessions}</p>
            )}
          </div>
        </section>
      </Fragment>
    </DynamicContent>
  </main>

  <FooterBlack locale={locale} />
</Layout>

<style>
  /* WDA-965: Partner page styles */
  .partner-page {
    min-height: 100vh;
  }

  /* Container - Same as blog page for consistent lateral margins */
