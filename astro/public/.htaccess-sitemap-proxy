# SAUWA - Sitemap Proxy to WordPress Backend
# This file proxies /sitemap.xml requests to the WordPress backend

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Proxy sitemap.xml to WordPress backend
    RewriteRule ^sitemap\.xml$ https://backend.sauwasauna.com/sitemap.xml [P,L]

    # Optional: Proxy robots.txt if also generated by WordPress
    # RewriteRule ^robots\.txt$ https://backend.sauwasauna.com/robots.txt [P,L]
</IfModule>

# Alternative: If mod_proxy is not available, use redirect
# <IfModule !mod_proxy.c>
#     RewriteRule ^sitemap\.xml$ https://backend.sauwasauna.com/sitemap.xml [R=307,L]
# </IfModule>
