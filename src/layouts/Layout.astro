---
import GoogleTagManager from '../components/GoogleTagManager.astro';
import GoogleTagManagerNoScript from '../components/GoogleTagManagerNoScript.astro';
import AnalyticsDebugger from '../components/AnalyticsDebugger.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  pageType?: string;
}

const { title, description = '', lang = 'es', pageType = 'page' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const gtmId = import.meta.env.PUBLIC_GTM_ID;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Fonts - SAUWA Brand Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;600;700&family=Nunito+Sans:wght@200;300;400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Google Tag Manager -->
    <GoogleTagManager gtmId={gtmId} locale={lang} pageType={pageType} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    {description && <meta property="twitter:description" content={description} />}
  </head>
  <body class="min-h-screen bg-transparent text-gray-900">
    <!-- Google Tag Manager NoScript -->
    <GoogleTagManagerNoScript gtmId={gtmId} />

    <slot />

    <!-- Analytics Debugger (Development only) -->
    <AnalyticsDebugger />
  </body>
</html>
