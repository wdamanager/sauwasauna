        </svg>
      </a>
    </div>
  </div>
</nav>

<style>
  /* Navbar Scroll Styles */
  .navbar-scroll {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: translateY(-100%);
    opacity: 0;
    transition: none;
    will-change: transform, opacity;
  }

  .navbar-scroll.visible {
    transform: translateY(0);
    opacity: 1;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 6.65rem; /* 5rem * 1.33 = ~106px */
    padding-left: 3rem; /* px-12 */
    padding-right: 3rem;
    max-width: 100%;
  }

  /* Logo Styles */
  .navbar-logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .navbar-logo {
    height: 3.33rem; /* 2.5rem * 1.33 = ~53px */
    width: auto;
  }

  /* Navigation Right Side */
  .navbar-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Language Selector */
  .navbar-languages {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .navbar-lang {
    color: #1f2937; /* text-gray-800 */
    text-decoration: none;
    font-size: 0.875rem; /* text-sm */
    font-weight: 500;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .navbar-lang:hover {
    opacity: 1;
  }

  .navbar-lang.active {
    opacity: 1;
    text-decoration: underline;
  }

  .navbar-separator {
    color: #9ca3af; /* text-gray-400 */
    font-size: 0.875rem;
  }

  /* Instagram Icon */
  .navbar-instagram {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .navbar-instagram-icon {
    width: 1.5rem; /* w-6 */
    height: 1.5rem; /* h-6 */
    color: #1f2937; /* text-gray-800 */
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .navbar-instagram:hover .navbar-instagram-icon {
    opacity: 1;
  }

  /* Animaciones */
  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }

  .navbar-scroll.navbar-enter {
    animation: slideDown 0.3s ease-out forwards;
  }

  .navbar-scroll.navbar-exit {
    animation: slideUp 0.3s ease-in forwards;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .navbar-container {
      height: 5.33rem; /* 4rem * 1.33 = ~85px */
      padding-left: 1.5rem; /* px-6 */
      padding-right: 1.5rem;
    }

    .navbar-logo {
      height: 2.66rem; /* 2rem * 1.33 = ~43px */
    }

    .navbar-nav {
      gap: 1rem;
    }

    .navbar-lang {
      font-size: 0.75rem; /* text-xs */
    }

    .navbar-separator {
      font-size: 0.75rem;
    }
  }

  /* Accesibilidad - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .navbar-scroll,
    .navbar-scroll.navbar-enter,
    .navbar-scroll.navbar-exit {
      animation: none;
      transition: none;
    }
  }
</style>

<style is:global>
  /* Transiciones para elementos del hero */
  .hero-section .language-selector,
  .hero-section .instagram-link {
    transition: opacity 0.3s ease;
  }
</style>

<script>
  // Navbar Scroll Detection Script
  (function() {
    const navbar = document.getElementById('navbar-scroll');
    if (!navbar) return;

    // Elementos del hero que deben ocultarse cuando aparece la navbar scroll
    const heroLanguageSelector = document.querySelector('.hero-section .language-selector');
    const heroInstagramLink = document.querySelector('.hero-section .instagram-link');

    let lastScrollY = 0;
    let ticking = false;
    const threshold = 100;
    let isVisible = false;

    function showNavbar() {
      if (!isVisible) {
        navbar.classList.remove('navbar-exit');
        navbar.classList.add('navbar-enter', 'visible');
        isVisible = true;

        // Ocultar elementos del hero
        if (heroLanguageSelector) heroLanguageSelector.style.opacity = '0';
        if (heroInstagramLink) heroInstagramLink.style.opacity = '0';
      }
    }

    function hideNavbar() {
      if (isVisible) {
        navbar.classList.remove('navbar-enter', 'visible');
        navbar.classList.add('navbar-exit');
        isVisible = false;

        // Mostrar elementos del hero
        if (heroLanguageSelector) heroLanguageSelector.style.opacity = '1';
        if (heroInstagramLink) heroInstagramLink.style.opacity = '1';
      }
    }

    function handleScroll() {
      const scrollY = window.scrollY;

      // En top (scroll < threshold)
      if (scrollY < threshold) {
        hideNavbar();
        // Asegurar que elementos del hero estén visibles
        if (heroLanguageSelector) heroLanguageSelector.style.opacity = '1';
        if (heroInstagramLink) heroInstagramLink.style.opacity = '1';
        lastScrollY = scrollY;
        return;
      }

      // Scroll down - mostrar navbar
      if (scrollY > lastScrollY && scrollY > threshold) {
        showNavbar();
      }

      // Scroll up (pero no en top) - ocultar navbar
      if (scrollY < lastScrollY && scrollY > threshold) {
        hideNavbar();
      }

      lastScrollY = scrollY;
    }

    // Optimización con requestAnimationFrame
    function onScroll() {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    }

    // Event Listener
    window.addEventListener('scroll', onScroll, { passive: true });

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      window.removeEventListener('scroll', onScroll);
    });
  })();
</script>
