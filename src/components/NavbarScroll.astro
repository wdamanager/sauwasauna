---
/**
 * NavbarScroll - Navbar que aparece al hacer scroll down
 * Se oculta en scroll up y cuando estamos en el top
 *
 * Comportamiento por tipo de página:
 * - Homepage: Navbar deshabilitado completamente
 * - Otras páginas: Transparente en top, blanco al scrollear
 */

interface Props {
  locale: string;
}

const { locale } = Astro.props;

// Idiomas disponibles
const languages = ['ca', 'es', 'fr', 'en'];
---

<nav id="navbar-scroll" class="navbar-scroll" aria-label="Navigation">
  <div class="navbar-container">
    <!-- Logo (izquierda) -->
    <a href={`/${locale}`} class="navbar-logo-link" aria-label="SAUWA Home">
      <!-- Logo negro (por defecto, se muestra cuando hay fondo blanco) -->
      <img
        src="/images/logo/sauwa-black.svg"
        alt="SAUWA"
        class="navbar-logo navbar-logo-black"
      />
      <!-- Logo blanco (se muestra cuando el navbar es transparente) -->
      <img
        src="/images/logo/sauwa-full-white.svg"
        alt="SAUWA"
        class="navbar-logo navbar-logo-white"
      />
    </a>

    <!-- Navegación (derecha) -->
    <div class="navbar-nav">
      <!-- Selector de idiomas -->
      <div class="navbar-languages">
        {languages.map((lang, index) => (
          <>
            <a
              href={`/${lang}`}
              class={`navbar-lang ${lang === locale ? 'active' : ''}`}
              aria-label={`Switch to ${lang.toUpperCase()}`}
            >
              {lang.toUpperCase()}
            </a>
            {index < languages.length - 1 && <span class="navbar-separator">/</span>}
          </>
        ))}
      </div>

      <!-- Instagram Icon -->
      <a
        href="https://www.instagram.com/sauwa.ad/"
        target="_blank"
        rel="noopener noreferrer"
        class="navbar-instagram"
        aria-label="Follow us on Instagram"
      >
        <svg class="navbar-instagram-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
