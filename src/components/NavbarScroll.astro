---
/**
 * NavbarScroll - Navbar inteligente con comportamiento dinámico
 *
 * Comportamiento por tipo de página:
 * - Homepage: Transparente en TOP (logo blanco), se oculta al scrollear DOWN, aparece blanco al scrollear UP
 * - Otras páginas: Transparente en TOP (logo blanco), blanco al scrollear
 *
 * WDA-314: Integración mobile con HamburgerButton + MobileMenu
 */

import HamburgerButton from './ui/HamburgerButton.astro';
import MobileMenu from './ui/MobileMenu.astro';

interface Props {
  locale: string;
}

const { locale } = Astro.props;

// Idiomas disponibles
const languages = ['ca', 'es', 'fr', 'en'];

// Get current path without locale prefix to preserve it when switching languages
const currentPath = Astro.url.pathname.substring(3); // Remove /es/ or /ca/ etc
---

<nav id="navbar-scroll" class="navbar-scroll" aria-label="Navigation">
  <div class="navbar-container">
    <!-- Selector de idiomas (izquierda) -->
    <div class="navbar-languages">
      {languages.map((lang, index) => {
        const newPath = `/${lang}${currentPath}`;
        const href = newPath.endsWith('/') ? newPath : `${newPath}/`;
        return (
          <>
            <a
              href={href}
              class={`navbar-lang ${lang === locale ? 'active' : ''}`}
              aria-label={`Switch to ${lang.toUpperCase()}`}
            >
              {lang.toUpperCase()}
            </a>
            {index < languages.length - 1 && <span class="navbar-separator">/</span>}
          </>
        );
      })}
    </div>

    <!-- Logo (centro - oculto cuando navbar es transparente en homepage) -->
    <a href={`/${locale}/`} class="navbar-logo-link" aria-label="SAUWA Home">
      <!-- Logo negro (por defecto, se muestra cuando hay fondo blanco) -->
      <img
        src="/images/logo/sauwa-black.svg"
        alt="SAUWA"
        class="navbar-logo navbar-logo-black"
      />
      <!-- Logo blanco (se muestra cuando el navbar es transparente) -->
      <!-- FASE 3: Usar sauwa-white.svg para blog -->
      <img
        src="/images/logo/sauwa-white.svg"
        alt="SAUWA"
        class="navbar-logo navbar-logo-white"
      />
    </a>

    <!-- Instagram Icon (derecha en desktop) -->
    <a
      href="https://www.instagram.com/sauwa.ad/"
      target="_blank"
      rel="noopener noreferrer"
      class="navbar-instagram navbar-desktop-only"
      aria-label="Follow us on Instagram"
    >
