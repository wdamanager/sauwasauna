    </a>

    <!-- WDA-314: Hamburger Button (solo mobile) -->
    <div class="navbar-mobile-only">
      <HamburgerButton />
    </div>
  </div>
</nav>

<!-- WDA-314: Mobile Menu (solo mobile) -->
<MobileMenu locale={locale} />

<style>
  /* Navbar Scroll Styles */
  .navbar-scroll {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transform: translateY(-100%);
    opacity: 0;
    /* Transiciones suaves y elegantes */
    transition:
      transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
      background-color 0.3s ease,
      box-shadow 0.3s ease;
    will-change: transform, opacity, background-color;
  }

  /* Estado transparente (para páginas no-home cuando estamos en top) */
  .navbar-scroll.transparent {
    background: transparent;
    box-shadow: none;
  }

  /* Estado visible (para páginas no-home) - animación suave al aparecer */
  .navbar-scroll.visible {
    transform: translateY(0);
    opacity: 1;
  }

  /* Para páginas no-home, la navbar siempre está visible */
  .navbar-scroll.visible.transparent {
    transform: translateY(0);
    opacity: 1;
    background: transparent;
    box-shadow: none;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 6.65rem; /* ~106px - altura base */
    padding-left: 3rem; /* px-12 */
    padding-right: 3rem;
    max-width: 100%;
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Altura mayor cuando navbar es transparente (para logo blanco) */
  .navbar-scroll.transparent .navbar-container {
    height: 6rem; /* WDA-314: 96px - para logo blanco más pequeño */
  }

  /* Altura menor en homepage cuando transparente (sin logo) */
  .navbar-scroll.transparent.homepage-navbar .navbar-container {
    height: 4.5rem; /* ~72px - más sutil sin logo */
  }

  /* Logo Styles */
  .navbar-logo-link {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    text-decoration: none;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  /* WDA-314: Mobile - Logo a la izquierda */
  @media (max-width: 767px) {
    .navbar-logo-link {
      position: static !important;
      left: auto !important;
      transform: none !important;
      margin-right: auto;
      margin-left: 0;
    }
  }

  /* Ocultar logo cuando navbar es transparente en homepage */
  .navbar-scroll.transparent.homepage-navbar .navbar-logo-link {
    opacity: 0;
    pointer-events: none;
  }

  .navbar-logo {
    width: auto;
    display: none;
    transition: height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Logo negro (cuando navbar tiene fondo blanco al scrollear) */
  .navbar-logo-black {
    display: block;
    height: 3.33rem; /* ~53px - tamaño compacto */
  }

  /* Logo blanco (cuando navbar es transparente en TOP) */
  .navbar-logo-white {
    display: none;
    height: 4rem; /* WDA-314: 64px - más pequeño y elegante */
  }

  /* Cuando navbar es transparente, mostrar logo blanco grande */
  .navbar-scroll.transparent .navbar-logo-black {
    display: none;
  }

  .navbar-scroll.transparent .navbar-logo-white {
    display: block;
  }

  /* WDA-314: Control de visibilidad mobile/desktop */
  .navbar-desktop-only {
    display: flex;
  }

  .navbar-mobile-only {
    display: none;
    color: #1f2937; /* Negro por defecto */
  }

  /* Hamburger blanco cuando navbar es transparente */
  .navbar-scroll.transparent .navbar-mobile-only {
    color: white;
  }

  /* WDA-314: Responsive Mobile Behavior */
  @media (max-width: 767px) {
    /* Desktop elements: Instagram link (solo desktop) */
    .navbar-desktop-only {
      display: none !important;
    }

    /* Mobile elements: Hamburger button (solo mobile) */
    .navbar-mobile-only {
      display: flex;
      align-items: center;
      margin-left: auto; /* Empuja hamburger a la derecha */
    }

    /* Ocultar selector de idiomas en mobile (está en MobileMenu) */
    .navbar-languages {
      display: none !important;
    }

    /* CRÍTICO: Ocultar Instagram icon en mobile */
    .navbar-instagram {
      display: none !important;
    }
  }

  /* Language Selector (Left) */
  .navbar-languages {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .navbar-lang {
    color: #1f2937; /* text-gray-800 */
    text-decoration: none;
    font-size: 0.875rem; /* text-sm */
    font-weight: 500;
    opacity: 0.7;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Texto blanco cuando navbar es transparente */
  .navbar-scroll.transparent .navbar-lang {
    color: white;
  }

  .navbar-lang:hover {
    opacity: 1;
  }

  .navbar-lang.active {
    opacity: 1;
    text-decoration: underline;
  }

  .navbar-separator {
    color: #9ca3af; /* text-gray-400 */
    font-size: 0.875rem;
    transition: color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Separador blanco cuando navbar es transparente */
  .navbar-scroll.transparent .navbar-separator {
    color: rgba(255, 255, 255, 0.6);
  }

  /* Instagram Icon */
  .navbar-instagram {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .navbar-instagram-icon {
    width: 1.5rem; /* w-6 */
    height: 1.5rem; /* h-6 */
    color: #1f2937; /* text-gray-800 */
    opacity: 0.7;
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      color 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Icono blanco cuando navbar es transparente */
  .navbar-scroll.transparent .navbar-instagram-icon {
    color: white;
  }

  .navbar-instagram:hover .navbar-instagram-icon {
    opacity: 1;
  }

  /* Animaciones */
  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }

  .navbar-scroll.navbar-enter {
    animation: slideDown 0.3s ease-out forwards;
  }

  .navbar-scroll.navbar-exit {
    animation: slideUp 0.3s ease-in forwards;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .navbar-container {
      height: 5.33rem; /* ~85px */
      padding-left: 1.5rem; /* px-6 */
      padding-right: 1.5rem;
    }

    .navbar-scroll.transparent .navbar-container {
      height: 5rem; /* WDA-314: 80px - más compacto para mobile */
    }

    .navbar-scroll.transparent.homepage-navbar .navbar-container {
      height: 4rem; /* ~64px - más sutil en mobile homepage */
    }

    .navbar-logo-black {
      height: 2.66rem; /* ~43px */
    }

    .navbar-logo-white {
      height: 3rem; /* WDA-314: ~48px - más pequeño en mobile */
    }

    .navbar-nav {
      gap: 1rem;
    }

    .navbar-lang {
      font-size: 0.75rem; /* text-xs */
    }

    .navbar-separator {
      font-size: 0.75rem;
    }
  }

  /* Accesibilidad - Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .navbar-scroll,
    .navbar-scroll.navbar-enter,
    .navbar-scroll.navbar-exit {
      animation: none;
      transition: none;
    }
  }
</style>

<style is:global>
  /* Estado de ocultación para elementos del hero cuando navbar-scroll está visible */
  .hero-elements-hidden .hero-section .language-selector,
  .hero-elements-hidden .hero-section .instagram-link {
    display: none !important;
  }
</style>

<script>
  // Navbar Scroll Detection Script
  document.addEventListener('DOMContentLoaded', () => {
    const navbar = document.getElementById('navbar-scroll');
    if (!navbar) return;

    // Check if we're on homepage
    const isHomepage = window.location.pathname === '/es/' ||
                       window.location.pathname === '/ca/' ||
                       window.location.pathname === '/en/' ||
                       window.location.pathname === '/fr/' ||
                       window.location.pathname === '/es' ||
                       window.location.pathname === '/ca' ||
                       window.location.pathname === '/en' ||
                       window.location.pathname === '/fr';

    let ticking = false;
    let lastScrollY = window.scrollY;
    const threshold = 100;
    const scrollDelta = 5; // Mínimo scroll para detectar dirección

    if (isHomepage) {
      // Homepage: Navbar transparente en TOP, aparece al scrollear UP, se oculta al scrollear DOWN
      // Inicialmente visible y transparente en el TOP
      navbar.classList.add('visible');
      navbar.classList.add('transparent');
      navbar.classList.add('homepage-navbar');

      function updateHomepageNavbar() {
        const scrollY = window.scrollY;
        const scrollDirection = scrollY > lastScrollY ? 'down' : 'up';

        if (scrollY < threshold) {
          // En el top: MOSTRAR navbar TRANSPARENTE con logo blanco
          navbar.classList.add('visible');
          navbar.classList.add('transparent');
        } else if (scrollDirection === 'down') {
          // Scrolleando hacia abajo: OCULTAR navbar (usuario quiere ver contenido)
          navbar.classList.remove('visible');
          navbar.classList.remove('transparent');
        } else if (scrollDirection === 'up') {
          // Scrolleando hacia arriba: MOSTRAR navbar blanco (usuario quiere navegar)
          navbar.classList.add('visible');
          navbar.classList.remove('transparent');
        }

        lastScrollY = scrollY;
      }

      function onHomeScroll() {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateHomepageNavbar();
            ticking = false;
          });
          ticking = true;
        }
      }

      window.addEventListener('scroll', onHomeScroll, { passive: true });

      window.addEventListener('beforeunload', () => {
        window.removeEventListener('scroll', onHomeScroll);
      });

    } else {
      // Páginas no-home: navbar transparente en TOP, aparece al scrollear UP, se oculta al scrollear DOWN
      navbar.classList.add('visible');
      navbar.classList.add('transparent'); // Inicialmente transparente en TOP

      function updateNonHomepageNavbar() {
        const scrollY = window.scrollY;
        const scrollDirection = scrollY > lastScrollY ? 'down' : 'up';
        const scrollDifference = Math.abs(scrollY - lastScrollY);

        // Solo actuar si hay un scroll significativo
        if (scrollDifference < scrollDelta) {
          lastScrollY = scrollY;
          return;
        }

        if (scrollY < threshold) {
          // En el top: navbar transparente con logo blanco grande SIEMPRE VISIBLE
          navbar.classList.add('transparent');
          navbar.classList.add('visible');
        } else if (scrollDirection === 'down') {
          // Scrolleando hacia abajo: OCULTAR navbar (usuario quiere ver contenido)
          navbar.classList.remove('visible');
          navbar.classList.remove('transparent');
        } else if (scrollDirection === 'up') {
          // Scrolleando hacia arriba: MOSTRAR navbar blanco con logo negro (usuario quiere navegar)
          navbar.classList.remove('transparent');
          navbar.classList.add('visible');
        }

        lastScrollY = scrollY;
      }

      function onNonHomeScroll() {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            updateNonHomepageNavbar();
            ticking = false;
          });
          ticking = true;
        }
      }

      // Set initial state
      if (window.scrollY < threshold) {
        navbar.classList.add('transparent');
      }

      window.addEventListener('scroll', onNonHomeScroll, { passive: true });

      window.addEventListener('beforeunload', () => {
        window.removeEventListener('scroll', onNonHomeScroll);
      });
    }
  });
</script>
