---
// src/components/sections/BlogStickyScrollSection.astro
// WDA-266: Sección "Beneficios + Blog" con Sticky Scroll Layout

import { getLatestPosts, truncateExcerpt, formatDateShort, getPrimaryCategory } from '../../lib/wordpress';
import type { WPPost } from '../../lib/wordpress/types';

// Obtener los últimos 6 posts en build time
const posts: WPPost[] = await getLatestPosts(6);

// Separar el primer post (destacado) del resto
const [featuredPost, ...otherPosts] = posts;

// Imagen fallback si no hay featured image
const DEFAULT_IMAGE = '/images/placeholder-sauna-blog.jpg';

// Beneficios para mostrar en el sticky sidebar
const benefits = [
  {
    icon: '🔥',
    title: 'Recuperación Muscular',
    description: 'Acelera la recuperación post-ejercicio y reduce el dolor muscular'
  },
  {
    icon: '❄️',
    title: 'Contraste Térmico',
    description: 'Activa el sistema cardiovascular y fortalece el sistema inmune'
  },
  {
    icon: '🧘',
    title: 'Bienestar Mental',
    description: 'Reduce el estrés y mejora la calidad del sueño'
  },
  {
    icon: '💪',
    title: 'Rendimiento Deportivo',
    description: 'Mejora la resistencia y acelera la eliminación de toxinas'
  }
];
---

<section class="benefits-blog-section" id="beneficios-blog">
  <div class="container">
    <!-- Header de sección -->
    <div class="section-header">
      <h2 class="section-title">
        <span class="highlight">Beneficios</span> respaldados por la ciencia
      </h2>
      <p class="section-subtitle">
        Descubre cómo el ritual nórdico de sauna y baños fríos transforma tu bienestar
      </p>
    </div>

    <!-- Layout de dos columnas con sticky scroll -->
    <div class="sticky-layout">
      <!-- Columna izquierda: Beneficios (sticky) -->
      <div class="benefits-column">
        <div class="sticky-content">
          <h3 class="benefits-title">Por qué elegir SAUWA</h3>

          <div class="benefits-list">
            {benefits.map((benefit, index) => (
              <div
                class="benefit-card"
                data-benefit-index={index}
              >
                <span class="benefit-icon">{benefit.icon}</span>
                <div class="benefit-content">
                  <h4 class="benefit-title">{benefit.title}</h4>
                  <p class="benefit-description">{benefit.description}</p>
                </div>
              </div>
            ))}
          </div>

          <a href="/reservar" class="cta-button">
            Reserva tu sesión
            <svg class="arrow-icon" width="20" height="20" viewBox="0 0 20 20">
              <path d="M5 10h10m0 0l-3-3m3 3l-3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Columna derecha: Blog posts (scroll) -->
      <div class="blog-column">
        <div class="blog-header">
          <h3 class="blog-title">Últimos artículos del blog</h3>
          <a href="/blog" class="view-all-link">
            Ver todos los artículos
            <svg width="16" height="16" viewBox="0 0 16 16">
              <path d="M4 8h8m0 0l-2-2m2 2l-2 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
            </svg>
          </a>
        </div>

        <!-- Post destacado -->
        {featuredPost && (
          <article class="featured-post">
            <a href={`/blog/${featuredPost.slug}`} class="post-link">
              <div class="post-image">
                <img
                  src={featuredPost.featuredImage?.sourceUrl || DEFAULT_IMAGE}
                  alt={featuredPost.featuredImage?.altText || featuredPost.title}
                  width="800"
                  height="450"
                  loading="lazy"
                />
                <span class="featured-badge">Destacado</span>
              </div>

              <div class="post-content">
                {featuredPost.categories.length > 0 && (
                  <div class="post-meta">
                    {getPrimaryCategory(featuredPost.categories) && (
                      <span class="category-tag">
                        {getPrimaryCategory(featuredPost.categories)?.name}
                      </span>
                    )}
                    <time datetime={featuredPost.date}>
                      {formatDateShort(featuredPost.date)}
                    </time>
                  </div>
                )}

                <h4 class="post-title">{featuredPost.title}</h4>
                <p class="post-excerpt">
                  {truncateExcerpt(featuredPost.excerpt, 180)}
                </p>

                <span class="read-more">
                  Leer más
                  <svg width="16" height="16" viewBox="0 0 16 16">
                    <path d="M4 8h8m0 0l-2-2m2 2l-2 2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                  </svg>
                </span>
              </div>
            </a>
          </article>
        )}

        <!-- Grid de posts -->
        <div class="posts-grid">
          {otherPosts.map((post) => (
            <article class="post-card">
              <a href={`/blog/${post.slug}`} class="post-link">
                <div class="post-image">
                  <img
                    src={post.featuredImage?.sourceUrl || DEFAULT_IMAGE}
                    alt={post.featuredImage?.altText || post.title}
                    width="400"
                    height="225"
                    loading="lazy"
                  />
                </div>

                <div class="post-content">
                  {getPrimaryCategory(post.categories) && (
                    <span class="category-tag small">
                      {getPrimaryCategory(post.categories)?.name}
                    </span>
                  )}

                  <h5 class="post-title">{post.title}</h5>
                  <p class="post-excerpt">
                    {truncateExcerpt(post.excerpt, 100)}
                  </p>

                  <div class="post-footer">
                    <time datetime={post.date}>
                      {formatDateShort(post.date)}
                    </time>
                  </div>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .benefits-blog-section {
    padding: 80px 0;
    background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .section-title {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    margin-bottom: 16px;
    color: #1a1a1a;
  }

  .section-title .highlight {
    color: #ff6b35;
  }

  .section-subtitle {
    font-size: 18px;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
  }

  /* Sticky Layout */
  .sticky-layout {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 48px;
    align-items: start;
  }

  /* Benefits Column (Sticky) */
  .benefits-column {
    position: relative;
  }

  .sticky-content {
    position: sticky;
    top: 100px;
  }

  .benefits-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 32px;
    color: #1a1a1a;
  }

  .benefits-list {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin-bottom: 40px;
  }

  .benefit-card {
    display: flex;
    gap: 16px;
    padding: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .benefit-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .benefit-icon {
    font-size: 32px;
    line-height: 1;
  }

  .benefit-content {
    flex: 1;
  }

  .benefit-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #1a1a1a;
  }

  .benefit-description {
    font-size: 14px;
    color: #666;
    line-height: 1.6;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: #ff6b35;
    color: white;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: #e55a2b;
    transform: translateY(-2px);
  }

  .arrow-icon {
    transition: transform 0.3s ease;
  }

  .cta-button:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Blog Column */
  .blog-column {
    min-height: 100vh;
  }

  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .blog-title {
    font-size: 24px;
    font-weight: 600;
    color: #1a1a1a;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: #ff6b35;
    font-weight: 500;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .view-all-link:hover {
    gap: 10px;
  }

  /* Featured Post */
  .featured-post {
    margin-bottom: 48px;
  }

  .featured-post .post-link {
    display: block;
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .featured-post .post-link:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-4px);
  }

  .featured-post .post-image {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .featured-post .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .featured-post .post-link:hover img {
    transform: scale(1.05);
  }

  .featured-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 6px 12px;
    background: #ff6b35;
    color: white;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
  }

  .featured-post .post-content {
    padding: 24px;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .category-tag {
    padding: 4px 12px;
    background: #fff3ed;
    color: #ff6b35;
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
  }

  .category-tag.small {
    font-size: 11px;
    padding: 3px 8px;
  }

  time {
    font-size: 14px;
    color: #999;
  }

  .featured-post .post-title {
    font-size: 24px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 12px;
    line-height: 1.3;
  }

  .post-excerpt {
    color: #666;
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: #ff6b35;
    font-weight: 500;
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }

  .post-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .post-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .post-card .post-link {
    display: block;
    text-decoration: none;
  }

  .post-card .post-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .post-card .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-card:hover img {
    transform: scale(1.05);
  }

  .post-card .post-content {
    padding: 20px;
  }

  .post-card .post-title {
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 12px 0 8px;
    line-height: 1.3;
  }

  .post-card .post-excerpt {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
    margin-bottom: 12px;
  }

  .post-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .post-footer time {
    font-size: 12px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .sticky-layout {
      grid-template-columns: 1fr;
      gap: 64px;
    }

    .sticky-content {
      position: static;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .section-header {
      margin-bottom: 48px;
    }

    .blog-header {
      flex-direction: column;
      align-items: start;
      gap: 16px;
    }

    .benefits-list {
      gap: 16px;
    }

    .benefit-card {
      padding: 16px;
    }
  }
</style>

<script>
  // Animación de scroll para destacar beneficios
  const benefitCards = document.querySelectorAll('.benefit-card');
  const blogColumn = document.querySelector('.blog-column');

  if (blogColumn && benefitCards.length > 0) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Calcular qué beneficio destacar basado en el scroll
            const scrollProgress = entry.intersectionRatio;
            const activeIndex = Math.floor(scrollProgress * benefitCards.length);

            benefitCards.forEach((card, index) => {
              if (index === activeIndex) {
                card.classList.add('active');
              } else {
                card.classList.remove('active');
              }
            });
          }
        });
      },
      {
        threshold: Array.from({ length: 100 }, (_, i) => i / 100),
        rootMargin: '-20% 0px -20% 0px'
      }
    );

    observer.observe(blogColumn);
  }
</script>

<style>
  /* Estilos para beneficio activo */
  .benefit-card.active {
    background: linear-gradient(135deg, #fff3ed 0%, #ffe8dd 100%);
    border: 1px solid #ff6b35;
  }

  .benefit-card {
    border: 1px solid transparent;
  }
</style>