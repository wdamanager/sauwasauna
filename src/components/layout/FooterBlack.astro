        { href: `#beneficios`, label: 'Beneficios' },
        { href: `#sesion`, label: 'Cómo es una sesión' },
        { href: `#newsletter`, label: 'Newsletter' },
      ]
    },

    // Columna 3: Información
    info: {
      title: 'INFORMACIÓN',
      links: [
