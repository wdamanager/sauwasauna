        { href: `/fr/blog`, label: 'Blog' },
      ]
    },
    contact: {
      title: 'CONTACT',
      email: 'info@sauwasauna.com',
      phone: '+376 123 456',
      address: 'Andorre-la-Vieille',
      social: 'Suivez-nous'
    },
    legal: [
      { href: `/fr/politique-confidentialite`, label: 'Politique de Confidentialité' },
      { href: `/fr/politique-cookies`, label: 'Politique de Cookies' },
      { href: `/fr/mentions-legales`, label: 'Mentions Légales' },
      { href: `/fr/termes-conditions`, label: 'Termes et Conditions' },
    ],
    copyright: `© ${currentYear} SAUWA - PCR Europe, S.L. Tous droits réservés.`
  }
};

const content = footerContent[locale];
---

<footer class="footer-black">
  <!-- Main Footer Content -->
  <div class="footer-container">

    <!-- Column 1: Logo + Tagline -->
    <div class="footer-brand">
      <img
        src="/images/logo/sauwa-full-white.svg"
        alt="SAUWA"
        class="footer-logo"
        width="140"
        height="48"
        loading="lazy"
      />
      <p class="footer-tagline">
        {content.tagline}
      </p>
    </div>

    <!-- Column 2: Navigation -->
    <div class="footer-column">
      <h3 class="footer-heading">{content.navigation.title}</h3>
      <nav aria-label="Footer navigation">
        <ul class="footer-links">
          {content.navigation.links.map(link => (
            <li>
              <a href={link.href} class="footer-link">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>

    <!-- Column 3: Information -->
    <div class="footer-column">
      <h3 class="footer-heading">{content.info.title}</h3>
      <ul class="footer-links">
        {content.info.links.map(link => (
          <li>
            <a href={link.href} class="footer-link">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Column 4: Contact + Social -->
    <div class="footer-column footer-contact">
      <h3 class="footer-heading">{content.contact.title}</h3>
      <div class="contact-info">
        <a href={`mailto:${content.contact.email}`} class="footer-link contact-link">
          <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
            <path d="m22 7-10 5L2 7"></path>
          </svg>
          {content.contact.email}
        </a>
        <a href={`tel:${content.contact.phone.replace(/\s/g, '')}`} class="footer-link contact-link">
          <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          {content.contact.phone}
        </a>
        <span class="footer-link contact-link">
          <svg class="contact-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          {content.contact.address}
        </span>
      </div>

      <!-- Social Media -->
      <div class="social-section">
        <p class="social-label">{content.contact.social}</p>
        <div class="social-links">
          <a
            href="https://www.instagram.com/sauwa.ad/"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label="Instagram"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
          <a
            href="https://www.facebook.com/sauwa.ad"
            target="_blank"
            rel="noopener noreferrer"
            class="social-link"
            aria-label="Facebook"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.77 7.46H14.5v-1.9c0-.9.6-1.1 1-1.1h3V.5h-4.33C10.24.5 9.5 3.44 9.5 5.32v2.15h-3v4h3v12h5v-12h3.85l.42-4z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

  </div>

  <!-- Copyright Section -->
  <div class="footer-bottom">
    <div class="footer-bottom-content">
      <p class="copyright-text">
        {content.copyright}
      </p>
      <nav class="legal-links" aria-label="Legal navigation">
        {content.legal.map((link, index) => (
          <>
            <a href={link.href} class="legal-link">
              {link.label}
            </a>
            {index < content.legal.length - 1 && <span class="legal-separator">·</span>}
          </>
        ))}
      </nav>
    </div>
  </div>
</footer>

<style>
  /* Footer principal */
  .footer-black {
    background-color: #000000;
    color: #FFFFFF;
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    margin-top: 0; /* Eliminar el espacio de 80px */
  }

  /* Container principal */
  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 5rem 2rem 3rem;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: 3rem;
  }

  /* Columna Brand (Logo + Tagline) */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-logo {
    width: 140px;
    height: auto;
    object-fit: contain;
  }

  .footer-tagline {
    font-size: 15px;
    font-weight: 300;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    max-width: 280px;
  }

  /* Columnas generales */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Headings */
  .footer-heading {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 16px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #FFFFFF;
    margin: 0;
    padding-bottom: 0.5rem;
  }

  /* Links */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    font-size: 15px;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: all 200ms ease;
    display: inline-flex;
    align-items: center;
  }

  .footer-link:hover {
    color: #DB4529;
    transform: translateX(2px);
  }

  /* Contacto */
  .footer-contact {
    gap: 1.5rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-link {
    gap: 0.5rem;
  }

  .contact-icon {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
  }

  /* Social Media */
  .social-section {
    margin-top: 1.5rem;
  }

  .social-label {
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1rem 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
    transition: all 300ms ease;
  }

  .social-link:hover {
    background-color: #DB4529;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(219, 69, 41, 0.4);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
  }

  /* Copyright Section */
  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem 0;
  }

  .footer-bottom-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .copyright-text {
    font-size: 13px;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .legal-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .legal-link {
    font-size: 13px;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 200ms ease;
  }

  .legal-link:hover {
    color: #DB4529;
  }

  .legal-separator {
    color: rgba(255, 255, 255, 0.3);
    font-size: 13px;
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .footer-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem 2rem;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  /* Mobile (< 768px) */
  @media (max-width: 767px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      padding: 3rem 1.5rem 2rem;
    }

    .footer-brand {
      align-items: center;
      text-align: center;
    }

    .footer-tagline {
      text-align: center;
      max-width: 100%;
    }

    .footer-column {
      align-items: center;
      text-align: center;
    }

    .footer-heading {
      text-align: center;
    }

    .footer-links {
      align-items: center;
    }

    .contact-info {
      align-items: center;
    }

    .social-section {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .legal-links {
      justify-content: center;
    }
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .footer-black {
    animation: fadeInUp 600ms ease-out;
  }
</style>