        { href: `/es/preguntas-frecuentes`, label: 'FAQ' },
        { href: `/es/blog`, label: 'Blog' },
      ]
    },

    // Columna 4: Contacto + Social
    contact: {
      title: 'CONTACTO',
      email: 'info@sauwasauna.com',
      phone: '+376 123 456',
      address: 'Andorra la Vella',
      social: 'Síguenos'
    },

    // Legal links (copyright section)
    legal: [
      { href: `/es/politica-privacidad`, label: 'Política de Privacidad' },
      { href: `/es/politica-cookies`, label: 'Política de Cookies' },
      { href: `/es/aviso-legal`, label: 'Aviso Legal' },
      { href: `/es/terminos-condiciones`, label: 'Términos y Condiciones' },
    ],

    copyright: `© ${currentYear} SAUWA - PCR Europe, S.L. Todos los derechos reservados.`
  },
  ca: {
    tagline: 'L\'autèntica experiència de sauna finlandesa a Andorra',
    navigation: {
      title: 'NAVEGACIÓ',
      links: [
        { href: `#experiencia`, label: 'Experiència' },
        { href: `#beneficios`, label: 'Beneficis' },
        { href: `#sesion`, label: 'Com és una sessió' },
        { href: `#newsletter`, label: 'Newsletter' },
      ]
    },
    info: {
      title: 'INFORMACIÓ',
      links: [
        { href: `/ca/sobre-nosaltres`, label: 'Sobre nosaltres' },
        { href: `/ca/localitzacions`, label: 'Localitzacions' },
        { href: `/ca/preguntes-frequents`, label: 'FAQ' },
        { href: `/ca/blog`, label: 'Blog' },
      ]
    },
    contact: {
      title: 'CONTACTE',
      email: 'info@sauwasauna.com',
      phone: '+376 123 456',
      address: 'Andorra la Vella',
      social: 'Segueix-nos'
    },
    legal: [
      { href: `/ca/politica-privacitat`, label: 'Política de Privacitat' },
      { href: `/ca/politica-cookies`, label: 'Política de Cookies' },
      { href: `/ca/avis-legal`, label: 'Avís Legal' },
      { href: `/ca/termes-condicions`, label: 'Termes i Condicions' },
    ],
    copyright: `© ${currentYear} SAUWA - PCR Europe, S.L. Tots els drets reservats.`
  },
  en: {
    tagline: 'The authentic Finnish sauna experience in Andorra',
    navigation: {
      title: 'NAVIGATION',
      links: [
        { href: `#experience`, label: 'Experience' },
