        { href: `#newsletter`, label: 'Newsletter' },
      ]
    },
    info: {
      title: 'INFORMATION',
      links: [
        { href: `/en/about-us`, label: 'About us' },
        { href: `/en/locations`, label: 'Locations' },
        { href: `/en/faq`, label: 'FAQ' },
        { href: `/en/blog`, label: 'Blog' },
      ]
    },
    contact: {
      title: 'CONTACT',
      email: 'info@sauwasauna.com',
      phone: '+376 123 456',
      address: 'Andorra la Vella',
      social: 'Follow us'
    },
    legal: [
      { href: `/en/privacy-policy`, label: 'Privacy Policy' },
      { href: `/en/cookie-policy`, label: 'Cookie Policy' },
      { href: `/en/legal-notice`, label: 'Legal Notice' },
      { href: `/en/terms-conditions`, label: 'Terms & Conditions' },
    ],
    copyright: `© ${currentYear} SAUWA - PCR Europe, S.L. All rights reserved.`
  },
  fr: {
    tagline: 'L\'authentique expérience de sauna finlandais en Andorre',
    navigation: {
      title: 'NAVIGATION',
      links: [
        { href: `#experience`, label: 'Expérience' },
        { href: `#benefices`, label: 'Bénéfices' },
        { href: `#session`, label: 'Comment est une séance' },
        { href: `#newsletter`, label: 'Newsletter' },
      ]
    },
    info: {
      title: 'INFORMATION',
      links: [
        { href: `/fr/a-propos`, label: 'À propos' },
