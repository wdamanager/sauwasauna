---
/**
 * WDA-320: Grid de banderas de países nórdicos y centroeuropeos
 * Diseño elegante con hover effects
 * Banderas SVG profesionales (no emojis)
 */

import FlagIcon from './FlagIcon.astro';

interface Country {
  code: string;
  name: string;
  benefit: string;
}

interface Props {
  title: string;
  subtitle: string;
  intro: string;
  countries: Country[];
}

const { title, subtitle, intro, countries } = Astro.props;
---

<section class="partners-countries">
  <div class="partners-countries__container">
    <div class="partners-countries__header">
      <h2 class="section-label section-label--b2b">{title}</h2>
      <h3 class="section-title">{subtitle}</h3>
      <p class="section-description">{intro}</p>
    </div>

    <div class="partners-countries__grid">
      {countries.map((country, index) => (
        <div
          class="partners-countries__card"
          data-index={index}
        >
          <div class="partners-countries__flag" aria-hidden="true">
            <FlagIcon countryCode={country.code} size={64} />
          </div>
          <h4 class="partners-countries__name">{country.name}</h4>
          <span class="partners-countries__benefit">{country.benefit}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .partners-countries {
    width: 100%;
    padding: 5rem 2rem;
    background-color: #ffffff;
  }

  .partners-countries__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .partners-countries__header {
    text-align: center;
    margin-bottom: var(--spacing-10); /* WDA-531: 4rem usando variable */
  }

  /* WDA-531: Usa clases globales .section-label, .section-title, .section-description */

  .partners-countries__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 3rem;
  }

  .partners-countries__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 2rem;
    background: #f4f4f4;
    border-radius: 12px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    opacity: 0;
    animation: fadeInScale 0.5s ease-out forwards;
  }

  /* WDA-531: Animation delays sin inline styles */
  .partners-countries__card[data-index="0"] { animation-delay: 0s; }
  .partners-countries__card[data-index="1"] { animation-delay: 0.08s; }
  .partners-countries__card[data-index="2"] { animation-delay: 0.16s; }
  .partners-countries__card[data-index="3"] { animation-delay: 0.24s; }
  .partners-countries__card[data-index="4"] { animation-delay: 0.32s; }
  .partners-countries__card[data-index="5"] { animation-delay: 0.4s; }
  .partners-countries__card[data-index="6"] { animation-delay: 0.48s; }
  .partners-countries__card[data-index="7"] { animation-delay: 0.56s; }
  .partners-countries__card[data-index="8"] { animation-delay: 0.64s; }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .partners-countries__card:hover {
    transform: translateY(-6px) scale(1.02);
    border-color: #406E51;
    background: #ffffff;
    box-shadow: 0 12px 32px rgba(64, 110, 81, 0.15);
  }

  .partners-countries__flag {
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
    display: flex;
    justify-content: center;
  }

  .partners-countries__card:hover .partners-countries__flag {
    transform: scale(1.05);
  }

  .partners-countries__name {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: var(--font-size-card-title);
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
    text-align: center;
  }

  .partners-countries__benefit {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: var(--font-size-badge);
    color: #406E51;
    text-align: center;
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .partners-countries__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  /* Desktop (>= 1024px) */
  @media (min-width: 1024px) {
    .partners-countries__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* Large Desktop (>= 1280px) */
  @media (min-width: 1280px) {
    .partners-countries__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  /* Mobile (< 768px) */
  @media (max-width: 767px) {
    .partners-countries {
      padding: 3rem var(--container-padding-mobile); /* WDA-294: Unificado a 20px */
    }

    .partners-countries__header {
      margin-bottom: var(--spacing-8); /* WDA-531: 2.5rem usando variable */
    }

    .partners-countries__grid {
      margin-top: 2rem;
      gap: 1.5rem;
    }

    .partners-countries__card {
      padding: 2.5rem 1.5rem;
    }

    .partners-countries__name {
      font-size: var(--font-size-heading);
    }

    .partners-countries__benefit {
      font-size: var(--font-size-badge);
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .partners-countries__card {
      animation: none;
      opacity: 1;
    }

    .partners-countries__card:hover,
    .partners-countries__card:hover .partners-countries__flag {
      transform: none;
    }
  }
</style>
