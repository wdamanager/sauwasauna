---
/**
 * WDA-320: Grid de banderas de países nórdicos y centroeuropeos
 * Diseño elegante con hover effects
 */

interface Country {
  code: string;
  name: string;
  flag: string;
}

interface Props {
  title: string;
  subtitle: string;
  intro: string;
  countries: Country[];
}

const { title, subtitle, intro, countries } = Astro.props;
---

<section class="partners-countries">
  <div class="partners-countries__container">
    <div class="partners-countries__header">
      <h2 class="partners-countries__title">{title}</h2>
      <h3 class="partners-countries__subtitle">{subtitle}</h3>
      <p class="partners-countries__intro">{intro}</p>
    </div>

    <div class="partners-countries__grid">
      {countries.map((country, index) => (
        <div
          class="partners-countries__card"
          style={`animation-delay: ${index * 0.08}s;`}
        >
          <div class="partners-countries__flag" aria-hidden="true">
            {country.flag}
          </div>
          <h4 class="partners-countries__name">{country.name}</h4>
          <span class="partners-countries__code">{country.code}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .partners-countries {
    width: 100%;
    padding: 5rem 2rem;
    background-color: #ffffff;
  }

  .partners-countries__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .partners-countries__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .partners-countries__title {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #406E51;
    margin: 0 0 0.75rem 0;
  }

  .partners-countries__subtitle {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-weight: 300;
    font-size: 2.5rem;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }

  .partners-countries__intro {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #636464;
    margin: 0 auto;
    max-width: 900px;
  }

  .partners-countries__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-top: 3rem;
  }

  .partners-countries__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 2rem;
    background: #f4f4f4;
    border-radius: 12px;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    opacity: 0;
    animation: fadeInScale 0.5s ease-out forwards;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .partners-countries__card:hover {
    transform: translateY(-6px) scale(1.02);
    border-color: #406E51;
    background: #ffffff;
    box-shadow: 0 12px 32px rgba(64, 110, 81, 0.15);
  }

  .partners-countries__flag {
    font-size: 4rem;
    line-height: 1;
    margin-bottom: 1.25rem;
    transition: transform 0.3s ease;
  }

  .partners-countries__card:hover .partners-countries__flag {
    transform: scale(1.1);
  }

  .partners-countries__name {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: 1.25rem;
    color: #1a1a1a;
    margin: 0 0 0.5rem 0;
    text-align: center;
  }

  .partners-countries__code {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #636464;
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .partners-countries__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  /* Desktop (>= 1024px) */
  @media (min-width: 1024px) {
    .partners-countries__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  /* Large Desktop (>= 1280px) */
  @media (min-width: 1280px) {
    .partners-countries__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  /* Mobile (< 768px) */
  @media (max-width: 767px) {
    .partners-countries {
      padding: 3rem 1.5rem;
    }

    .partners-countries__header {
      margin-bottom: 2.5rem;
    }

    .partners-countries__subtitle {
      font-size: 1.75rem;
    }

    .partners-countries__intro {
      font-size: 0.9375rem;
    }

    .partners-countries__grid {
      margin-top: 2rem;
      gap: 1.5rem;
    }

    .partners-countries__card {
      padding: 2.5rem 1.5rem;
    }

    .partners-countries__flag {
      font-size: 3.5rem;
    }

    .partners-countries__name {
      font-size: 1.125rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .partners-countries__card {
      animation: none;
      opacity: 1;
    }

    .partners-countries__card:hover,
    .partners-countries__card:hover .partners-countries__flag {
      transform: none;
    }
  }
</style>
