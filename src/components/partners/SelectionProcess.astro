---
/**
 * WDA-320: Proceso de selección con requisitos exclusivos
 * Diseño vertical con iconos premium
 */

interface SelectionRequirement {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  subtitle: string;
  intro: string;
  requirements: SelectionRequirement[];
}

const { title, subtitle, intro, requirements } = Astro.props;
---

<section class="partners-selection">
  <div class="partners-selection__container">
    <div class="partners-selection__header">
      <h2 class="partners-selection__title">{title}</h2>
      <h3 class="partners-selection__subtitle">{subtitle}</h3>
      <p class="partners-selection__intro">{intro}</p>
    </div>

    <div class="partners-selection__list">
      {requirements.map((req, index) => (
        <div
          class="partners-selection__item"
          style={`animation-delay: ${index * 0.15}s;`}
        >
          <div class="partners-selection__item-icon-wrapper">
            <div class="partners-selection__item-icon" aria-hidden="true">
              {req.icon}
            </div>
          </div>
          <div class="partners-selection__item-content">
            <h4 class="partners-selection__item-title">{req.title}</h4>
            <p class="partners-selection__item-description">{req.description}</p>
          </div>
          <div class="partners-selection__item-check" aria-hidden="true">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M5 13L9 17L19 7"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .partners-selection {
    width: 100%;
    padding: 5rem 2rem;
    background: linear-gradient(
      180deg,
      #f4f4f4 0%,
      #ffffff 100%
    );
  }

  .partners-selection__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .partners-selection__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .partners-selection__title {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #DB4529;
    margin: 0 0 0.75rem 0;
  }

  .partners-selection__subtitle {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-weight: 300;
    font-size: 2.5rem;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0 0 1.5rem 0;
  }

  .partners-selection__intro {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 1.0625rem;
    line-height: 1.7;
    color: #636464;
    margin: 0 auto;
    max-width: 800px;
  }

  .partners-selection__list {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .partners-selection__item {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 2rem;
    align-items: start;
    padding: 2.5rem 2rem;
    background: #ffffff;
    border-radius: 12px;
    border: 2px solid #f4f4f4;
    transition: all 0.3s ease;
    opacity: 0;
    animation: slideInRight 0.6s ease-out forwards;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .partners-selection__item:hover {
    border-color: #406E51;
    box-shadow: 0 8px 24px rgba(64, 110, 81, 0.12);
    transform: translateX(4px);
  }

  .partners-selection__item-icon-wrapper {
    width: 72px;
    height: 72px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #406E51 0%, #4a7e5c 100%);
    border-radius: 50%;
    transition: transform 0.3s ease;
  }

  .partners-selection__item:hover .partners-selection__item-icon-wrapper {
    transform: scale(1.05);
  }

  .partners-selection__item-icon {
    font-size: 2rem;
    line-height: 1;
  }

  .partners-selection__item-content {
    flex: 1;
  }

  .partners-selection__item-title {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: 1.375rem;
    color: #1a1a1a;
    margin: 0 0 1rem 0;
  }

  .partners-selection__item-description {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 1rem;
    line-height: 1.7;
    color: #636464;
    margin: 0;
  }

  .partners-selection__item-check {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e8f5e9;
    border-radius: 50%;
    color: #406E51;
    transition: all 0.3s ease;
  }

  .partners-selection__item:hover .partners-selection__item-check {
    background: #406E51;
    color: #ffffff;
    transform: rotate(360deg);
  }

  /* Mobile (< 768px) */
  @media (max-width: 767px) {
    .partners-selection {
      padding: 3rem 1.5rem;
    }

    .partners-selection__header {
      margin-bottom: 2.5rem;
    }

    .partners-selection__subtitle {
      font-size: 1.75rem;
    }

    .partners-selection__intro {
      font-size: 0.9375rem;
    }

    .partners-selection__list {
      gap: 1.5rem;
    }

    .partners-selection__item {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 2rem 1.5rem;
      text-align: center;
    }

    .partners-selection__item-icon-wrapper {
      width: 64px;
      height: 64px;
      margin: 0 auto;
    }

    .partners-selection__item-icon {
      font-size: 1.75rem;
    }

    .partners-selection__item-title {
      font-size: 1.25rem;
    }

    .partners-selection__item-description {
      font-size: 0.9375rem;
    }

    .partners-selection__item-check {
      margin: 0 auto;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .partners-selection__item {
      gap: 1.5rem;
    }

    .partners-selection__item-icon-wrapper {
      width: 64px;
      height: 64px;
    }

    .partners-selection__item-title {
      font-size: 1.25rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .partners-selection__item {
      animation: none;
      opacity: 1;
    }

    .partners-selection__item:hover {
      transform: none;
    }

    .partners-selection__item:hover .partners-selection__item-icon-wrapper {
      transform: none;
    }

    .partners-selection__item:hover .partners-selection__item-check {
      transform: none;
    }
  }
</style>
