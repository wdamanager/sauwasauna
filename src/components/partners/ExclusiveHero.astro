---
/**
 * WDA-320: Hero exclusivo para Partners con parallax sutil
 * Diseño premium para página B2B
 */

interface Props {
  title: string; // SEO h1
  heading: string; // Commercial h2
  subtitle: string;
  ctaText: string;
  ctaHref: string;
  backgroundImage: string;
}

const { title, heading, subtitle, ctaText, ctaHref, backgroundImage } = Astro.props;
---

<section class="partners-hero">
  <div class="partners-hero__overlay"></div>
  <div
    class="partners-hero__background"
    style={`background-image: url('${backgroundImage}');`}
    data-parallax
  ></div>

  <div class="partners-hero__content">
    <h1 class="partners-hero__title-seo">{title}</h1>
    <h2 class="partners-hero__heading">{heading}</h2>
    <p class="partners-hero__subtitle">{subtitle}</p>

    <a href={ctaHref} class="partners-hero__cta" aria-label={ctaText}>
      <span class="partners-hero__cta-text">{ctaText}</span>
      <svg
        class="partners-hero__cta-icon"
        width="20"
        height="20"
        viewBox="0 0 20 20"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <path
          d="M4 10H16M16 10L11 5M16 10L11 15"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</section>

<style>
  .partners-hero {
    position: relative;
    width: 100%;
    height: 75vh;
    min-height: 550px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .partners-hero__background {
    position: absolute;
    inset: -10%; /* Expanded for parallax */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
    will-change: transform;
  }

  .partners-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(64, 110, 81, 0.4) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: 2;
  }

  .partners-hero__content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 1200px;
    width: 100%;
    padding: 6rem 2rem;
    gap: 2rem;
  }

  .partners-hero__title-seo {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 0.875rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
  }

  .partners-hero__heading {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-weight: 300;
    font-size: 3.25rem;
    line-height: 1.15;
    color: #ffffff;
    margin: 0;
    letter-spacing: -0.03em;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .partners-hero__subtitle {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: 1.375rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
    max-width: 800px;
  }

  .partners-hero__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 1rem;
    padding: 18px 36px;
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: 1rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #ffffff;
    background: #DB4529;
    border: 2px solid #DB4529;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .partners-hero__cta:hover {
    background: #BA2515;
    border-color: #BA2515;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(219, 69, 41, 0.3);
  }

  .partners-hero__cta:focus-visible {
    outline: 3px solid rgba(255, 255, 255, 0.8);
    outline-offset: 4px;
  }

  .partners-hero__cta-text {
    line-height: 1;
  }

  .partners-hero__cta-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .partners-hero__cta:hover .partners-hero__cta-icon {
    transform: translateX(4px);
  }

  /* Mobile responsive (< 768px) */
  @media (max-width: 767px) {
    .partners-hero {
      height: 65vh;
      min-height: 500px;
    }

    .partners-hero__content {
      padding: 4rem 1.5rem;
      gap: 1.5rem;
    }

    .partners-hero__title-seo {
      font-size: 0.75rem;
    }

    .partners-hero__heading {
      font-size: 1.875rem;
      line-height: 1.25;
    }

    .partners-hero__subtitle {
      font-size: 1.0625rem;
    }

    .partners-hero__cta {
      padding: 16px 28px;
      font-size: 0.9375rem;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .partners-hero__heading {
      font-size: 2.75rem;
    }

    .partners-hero__subtitle {
      font-size: 1.25rem;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .partners-hero__background {
      will-change: auto;
    }

    .partners-hero__cta:hover {
      transform: none;
    }

    .partners-hero__cta:hover .partners-hero__cta-icon {
      transform: none;
    }
  }
</style>

<script>
  // Parallax effect on scroll (sutil)
  document.addEventListener('DOMContentLoaded', () => {
    const parallaxElements = document.querySelectorAll('[data-parallax]');

    if (parallaxElements.length === 0) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (prefersReducedMotion) return;

    const handleScroll = () => {
      const scrolled = window.pageYOffset;

      parallaxElements.forEach((element) => {
        const el = element as HTMLElement;
        const speed = 0.3; // Parallax speed (lower = slower)
        const yPos = -(scrolled * speed);

        el.style.transform = `translate3d(0, ${yPos}px, 0)`;
      });
    };

    // Throttle scroll event for performance
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    });
  });

  // Smooth scroll al hacer click en CTA
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButtons = document.querySelectorAll('.partners-hero__cta');

    ctaButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const href = button.getAttribute('href');

        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>
