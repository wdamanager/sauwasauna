    color: #DB4529;
    margin: 0 0 1rem;
  }

  .main-heading {
    font-family: 'Helvetica Neue', 'Inter', sans-serif;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 300;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0 0 1.5rem;
  }

  .intro-text {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: clamp(1.0625rem, 1.3vw, 1.25rem); /* WDA-531: 17px → 20px (fue 15px → 18px) */
    font-weight: 400;
    line-height: 1.7;
    color: #444;
    margin: 0 0 3rem;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0 0 3rem;
  }

  .benefit-item {
    display: flex;
    gap: 1.25rem;
    margin-bottom: 2rem;
    transition: transform 0.3s ease;
  }

  .benefit-item:last-child {
    margin-bottom: 0;
  }

  .benefit-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #DB4529;
  }

  .benefit-icon svg {
    width: 24px;
    height: 24px;
  }

  .benefit-content {
    flex: 1;
  }

  .benefit-title {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 1.25rem; /* WDA-531: 20px (fue 18px) */
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 0.5rem;
  }

  .benefit-text {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 1.0625rem; /* WDA-531: 17px (fue 15.2px) */
    font-weight: 400;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }

  /* New paragraph styling */
  .new-paragraph {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: clamp(1.0625rem, 1.4vw, 1.375rem); /* WDA-531: 17px → 22px (fue 16px → 20px) */
    font-weight: 400;
    line-height: 1.7;
    color: #333;
    margin: 0 0 1.5rem;
    font-style: italic;
  }

  /* WDA-272: CTA Buttons Container - Side by side on desktop, stacked on mobile */
  .cta-buttons-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .cta-buttons-container {
      flex-direction: row;
      gap: 1rem;
    }
  }

  /* Base CTA styles */
  .cta-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    text-decoration: none;
    padding: 1rem 3.5rem;
    border-radius: 4px;
    transition: all 0.3s ease;
    min-height: 44px;
    text-align: center;
    white-space: nowrap;
  }

  /* Arrow icon for primary button */
  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  /* Primary CTA: Outline style (naranja corporativo) */
  .cta-primary {
    color: #DB4529;
    background-color: transparent;
    border: 1px solid #DB4529;
  }

  .cta-primary:hover {
    background-color: #DB4529;
    color: #FFFFFF;
  }

  .cta-primary:hover .arrow-icon {
    transform: translateX(4px);
  }

  /* Secondary CTA: Inverted filled style (naranja filled, hover to outline) */
  .cta-secondary {
    color: #FFFFFF;
    background-color: #DB4529;
    border: 1px solid #DB4529;
  }

  .cta-secondary:hover {
    background-color: transparent;
    color: #DB4529;
  }

  @media (max-width: 1024px) {
    .benefits-content {
      padding: 3rem 2rem;
    }

    .benefit-item {
      gap: 1rem;
    }

    .benefit-icon {
      width: 40px;
      height: 40px;
    }

    .benefit-icon svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 768px) {
    .benefits-content {
      padding: 1.25rem var(--container-padding-mobile); /* WDA-294: Reducido margen superior a 20px */
      margin-bottom: 2rem; /* WDA-294: Separación de los posts */
    }

    /* Centrar títulos y texto en mobile */
    .seo-title,
    .main-heading,
    .new-paragraph,
    .intro-text {
      text-align: center;
    }

    .intro-text {
      margin-bottom: 2rem;
    }

    .benefit-item {
      margin-bottom: 1.5rem;
    }

    /* Full-width buttons on mobile */
    .cta-link {
      width: 100%; /* Full width en mobile */
      align-self: stretch;
      justify-content: center;
      padding: 1rem 2rem;
    }
  }

  /* Fade-in animation from left to right */
  .fade-in-left {
    opacity: 0;
    transform: translateX(-30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .fade-in-left.is-visible {
    opacity: 1;
    transform: translateX(0);
  }

  /* Stagger delays for cascading effect */
  .seo-title.is-visible {
    transition-delay: 0.1s;
  }

  .main-heading.is-visible {
    transition-delay: 0.2s;
  }

  .new-paragraph.is-visible {
    transition-delay: 0.3s;
  }

  .intro-text.is-visible {
    transition-delay: 0.4s;
  }

  .cta-buttons-container.is-visible {
    transition-delay: 0.5s;
  }

  @media (prefers-reduced-motion: reduce) {
    .benefit-item,
    .cta-link,
    .fade-in-left,
    .arrow-icon {
      transition: none;
      opacity: 1;
      transform: none;
    }

    .cta-primary:hover .arrow-icon {
      transform: none;
    }
  }
</style>

<script>
  // Intersection Observer for fade-in animations
  document.addEventListener('DOMContentLoaded', () => {
    const fadeElements = document.querySelectorAll('.fade-in-left');

    const observerOptions = {
      root: null,
      rootMargin: '0px 0px -100px 0px',
      threshold: 0.1,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    fadeElements.forEach((element) => {
      observer.observe(element);
    });
  });
</script>
