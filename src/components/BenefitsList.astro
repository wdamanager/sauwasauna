---

<div class="benefits-content">
  <h2 class="seo-title">{localizedContent.seoTitle}</h2>
  <h3 class="main-heading">{localizedContent.heading}</h3>
  <p class="intro-text">{localizedContent.intro}</p>

  <ul class="benefits-list">
    {localizedContent.benefits.map((benefit) => (
      <li class="benefit-item">
        <div class="benefit-icon" set:html={icons[benefit.icon as keyof typeof icons]} />
        <div class="benefit-content">
          <h4 class="benefit-title">{benefit.title}</h4>
          <p class="benefit-text">{benefit.text}</p>
        </div>
      </li>
    ))}
  </ul>

  <a href={localizedContent.ctaLink} class="cta-link">
    {localizedContent.ctaText}
    <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>

<style>
  .benefits-content {
    padding: 4rem 3rem;
    max-width: 100%;
  }

  .seo-title {
    font-family: 'Helvetica Neue', 'Inter', sans-serif;
    font-size: 1rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #DB4529;
    margin: 0 0 1rem;
  }

  .main-heading {
    font-family: 'Helvetica Neue', 'Inter', sans-serif;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 200;
    line-height: 1.3;
    color: #1a1a1a;
    margin: 0 0 1.5rem;
  }

  .intro-text {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: clamp(0.95rem, 1.2vw, 1.125rem);
    font-weight: 300;
    line-height: 1.7;
    color: #444;
    margin: 0 0 3rem;
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0 0 3rem;
  }

  .benefit-item {
    display: flex;
    gap: 1.25rem;
    margin-bottom: 2rem;
    transition: transform 0.3s ease;
  }

  .benefit-item:last-child {
    margin-bottom: 0;
  }

  .benefit-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #DB4529;
  }

  .benefit-icon svg {
    width: 24px;
    height: 24px;
  }

  .benefit-content {
    flex: 1;
  }

  .benefit-title {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 1.125rem;
    font-weight: 400;
    color: #1a1a1a;
    margin: 0 0 0.5rem;
  }

  .benefit-text {
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 0.95rem;
    font-weight: 300;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }

  .cta-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Avenir Next', 'Nunito Sans', sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #406E51;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 1px solid #406E51;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .cta-link:hover {
    background-color: #406E51;
    color: #FFFFFF;
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .cta-link:hover .arrow-icon {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .benefits-content {
      padding: 3rem 2rem;
    }

    .benefit-item {
      gap: 1rem;
    }

    .benefit-icon {
      width: 40px;
      height: 40px;
    }

    .benefit-icon svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 768px) {
    .benefits-content {
      padding: 2rem 1.5rem;
    }

    .intro-text {
      margin-bottom: 2rem;
    }

    .benefit-item {
      margin-bottom: 1.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .benefit-item,
    .cta-link,
    .arrow-icon {
      transition: none;
    }
  }
</style>
