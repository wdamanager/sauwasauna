---
/**
 * Sistema de Botones Reutilizables SAUWA
 * Variantes: primary, secondary, ghost, skip
 * Respeta brand book: colores y tipografía oficial
 */

export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'skip';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit' | 'reset';
  href?: string;
  class?: string;
  disabled?: boolean;
  id?: string;
  [key: string]: any; // Permitir props HTML adicionales
}

const {
  variant = 'primary',
  size = 'md',
  type = 'button',
  href,
  class: className = '',
  disabled = false,
  ...rest
} = Astro.props;

// Estilos base compartidos
const baseStyles = 'inline-flex items-center justify-center font-avenir transition-all duration-300 ease-out focus:outline-none focus-visible:ring-2 focus-visible:ring-sauwa-orange focus-visible:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed';

// Variantes de estilo
const variantStyles = {
  primary: 'bg-sauwa-orange text-white hover:bg-sauwa-red hover:-translate-y-0.5 hover:shadow-[0_4px_12px_rgba(219,69,41,0.3)] active:translate-y-0',
  secondary: 'bg-transparent border-2 border-sauwa-orange text-sauwa-orange hover:bg-sauwa-orange hover:text-white hover:-translate-y-0.5 active:translate-y-0',
  ghost: 'bg-transparent text-current hover:bg-white/10 hover:-translate-y-0.5 active:translate-y-0',
  skip: 'bg-white/10 backdrop-blur-sm text-white border border-white/30 hover:bg-white/20 hover:border-white/50 hover:-translate-y-0.5 active:translate-y-0'
};

// Tamaños
const sizeStyles = {
  sm: 'px-4 py-2 text-sm rounded-md',
  md: 'px-6 py-3 text-base rounded-lg',
  lg: 'px-8 py-4 text-lg rounded-lg'
};

const combinedClass = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`;

// Renderizar como link o botón
const Tag = href ? 'a' : 'button';
---

<Tag
  class={combinedClass}
  type={!href ? type : undefined}
  href={href}
  disabled={!href && disabled}
  {...rest}
>
  <slot />
</Tag>

<style>
  /* Asegurar que los botones respeten la tipografía Avenir */
  button, a {
    font-variation-settings: 'wght' 300;
    letter-spacing: 0.025em;
  }
</style>
