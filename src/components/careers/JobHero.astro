---
/**
 * WDA-315: Hero component para página de Careers
 * Sin video, con imagen de fondo y CTA de scroll
 */

interface Props {
  title: string; // SEO h1
  heading: string; // Commercial h2
  subtitle: string;
  ctaText: string;
  ctaHref: string;
  backgroundImage: string;
}

const { title, heading, subtitle, ctaText, ctaHref, backgroundImage } = Astro.props;
---

<section class="careers-job-hero">
  <div class="careers-job-hero__overlay"></div>
  <div class="careers-job-hero__background" style={`background-image: url('${backgroundImage}');`}></div>

  <div class="careers-job-hero__content">
    <h1 class="careers-job-hero__title-seo">{title}</h1>
    <h2 class="careers-job-hero__heading">{heading}</h2>
    <p class="careers-job-hero__subtitle">{subtitle}</p>

    <a href={ctaHref} class="careers-job-hero__cta" aria-label={ctaText}>
      <span class="careers-job-hero__cta-text">{ctaText}</span>
      <svg
        class="careers-job-hero__cta-icon"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <path
          d="M12 5L12 19M12 19L19 12M12 19L5 12"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</section>

<style>
  /* WDA-325: Estilo hero como /blog - fondo marrón, altura reducida */
  .careers-job-hero {
    position: relative;
    width: 100%;
    padding: 10rem 0 3rem;
    background: #887161;
    overflow: hidden;
  }

  .careers-job-hero__background {
    display: none; /* WDA-325: Sin imagen de fondo */
  }

  .careers-job-hero__overlay {
    display: none; /* WDA-325: Sin overlay */
  }

  .careers-job-hero__content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 1100px;
    width: 100%;
    margin: 0 auto;
    padding: 0 2rem;
    gap: 1.5rem;
  }

  /* WDA-325: Jerarquía como home/blog - h1 pequeño, h2 grande */
  .careers-job-hero__title-seo {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: var(--font-size-heading);
    letter-spacing: 2px;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1.5rem 0;
  }

  .careers-job-hero__heading {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-weight: 100;
    font-size: 56px;
    line-height: 1.2;
    color: #ffffff;
    margin: 0 0 2.5rem 0;
    letter-spacing: normal;
  }

  .careers-job-hero__subtitle {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 300;
    font-size: var(--font-size-body);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    max-width: 700px;
  }

  .careers-job-hero__cta {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    margin-top: 2rem;
    padding: 1rem;
    color: #ffffff;
    text-decoration: none;
    transition: transform 0.3s ease, opacity 0.3s ease;
    cursor: pointer;
  }

  .careers-job-hero__cta:hover {
    transform: translateY(4px);
    opacity: 0.9;
  }

  .careers-job-hero__cta:focus-visible {
    outline: 2px solid #DB4529;
    outline-offset: 4px;
    border-radius: 4px;
  }

  .careers-job-hero__cta-text {
    font-family: 'Avenir Next', 'Avenir', system-ui, sans-serif;
    font-weight: 400;
    font-size: var(--font-size-body-xs);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .careers-job-hero__cta-icon {
    width: 24px;
    height: 24px;
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  /* Mobile responsive (< 768px) */
  @media (max-width: 767px) {
    .careers-job-hero {
      padding: 5.5rem 0 2rem; /* WDA-325: Mismo padding que blog mobile */
    }

    .careers-job-hero__content {
      padding: 0 1.5rem;
      gap: 2rem;
    }

    .careers-job-hero__title-seo {
      font-size: var(--font-size-heading);
      letter-spacing: 3px;
      margin-bottom: 0;
    }

    .careers-job-hero__heading {
      font-size: 32px;
      font-weight: 300;
      line-height: 1.3;
      margin-bottom: 0;
    }

    .careers-job-hero__subtitle {
      font-size: var(--font-size-body);
    }

    .careers-job-hero__cta {
      margin-top: 1.5rem;
    }
  }

  /* Tablet (768px - 1023px) */
  @media (min-width: 768px) and (max-width: 1023px) {
    .careers-job-hero__title-seo {
      font-size: var(--font-size-heading);
    }

    .careers-job-hero__heading {
      font-size: 40px;
    }

    .careers-job-hero__subtitle {
      font-size: var(--font-size-body);
    }
  }

  /* Small mobile (<= 640px) */
  @media (max-width: 640px) {
    .careers-job-hero__title-seo {
      font-size: var(--font-size-body-xs);
      letter-spacing: 2px;
    }

    .careers-job-hero__heading {
      font-size: 28px;
      line-height: 1.3;
    }
  }

  /* Reduced motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .careers-job-hero__cta-icon {
      animation: none;
    }

    .careers-job-hero__cta:hover {
      transform: none;
    }
  }
</style>

<script>
  // Smooth scroll al hacer click en CTA
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButtons = document.querySelectorAll('.careers-job-hero__cta');

    ctaButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const href = button.getAttribute('href');

        if (href && href.startsWith('#')) {
          e.preventDefault();
          const targetId = href.substring(1);
          const targetElement = document.getElementById(targetId);

          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>
