      min-height: 400px;
    }

    .benefits-content {
      padding: 2rem 1.5rem;
      text-align: center; /* WDA-295: Centrar contenido en móvil */
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* WDA-295: Asegurar que todos los elementos de texto tengan ancho completo */
    .seo-title,
    .main-heading,
    .intro-text,
    .benefits-list {
      width: 100%;
      max-width: 100%;
    }

    .intro-text {
      margin-bottom: 2rem;
    }

    .benefit-item {
      margin-bottom: 1.5rem;
      text-align: left; /* Mantener items alineados a la izquierda */
    }

    /* WDA-295: Centrar botón CTA en móvil */
    .cta-link {
      display: inline-flex;
      margin: 0;
    }

    /* Deshabilitar zoom en móviles */
    .image-wrapper:hover .hover-zoom-image {
      transform: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fade-in-left,
    .fade-in-right,
    .benefit-item,
    .cta-link,
    .arrow-icon,
    .hover-zoom-image {
      transition: none;
    }

    .image-wrapper:hover .hover-zoom-image {
      transform: none;
    }
  }
</style>

<script>
  // Intersection Observer para animaciones
  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.fade-in-left, .fade-in-right');

    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    elements.forEach((el) => {
      observer.observe(el);
    });
  });
</script>
