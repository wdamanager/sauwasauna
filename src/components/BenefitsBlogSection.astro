---
/**
 * BenefitsBlogSection - Sección con layout sticky 2 columnas
 * Inspirada en DATA Arquitectura - Sección Projectes
 *
 * Layout Desktop:
 * - Columna izquierda: sticky con beneficios
 * - Columna derecha: scroll con blog cards
 *
 * Layout Mobile/Tablet:
 * - Stack vertical (beneficios arriba, blog abajo)
 */

import BenefitsList from './BenefitsList.astro';
import BlogScrollCards from './BlogScrollCards.astro';

export interface Props {
  locale?: 'es' | 'ca' | 'en' | 'fr';
  class?: string;
}

const { locale = 'es', class: className = '' } = Astro.props;
---

<section class={`benefits-blog-section ${className}`} id="beneficios-blog">
  <div class="sticky-grid">
    <!-- Columna izquierda - Sticky -->
    <div class="sticky-column">
      <div class="sticky-content">
        <BenefitsList locale={locale} />
      </div>
    </div>

    <!-- Columna derecha - Scroll -->
    <div class="scroll-column">
      <BlogScrollCards locale={locale} limit={3} verticalScroll={false} />
    </div>
  </div>
</section>

<style>
  .benefits-blog-section {
    position: relative;
    background-color: #FFFFFF;
    min-height: 100vh;
  }

  .sticky-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
  }

  /* Columna izquierda - Sticky */
  .sticky-column {
    position: relative;
    background-color: #f4f4f4;
  }

  .sticky-content {
    position: sticky;
    top: 80px;
    height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    z-index: 10;
  }

  /* Columna derecha - Scroll */
  .scroll-column {
    position: relative;
    background-color: #f4f4f4;
    scroll-behavior: smooth;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .sticky-grid {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .sticky-column {
      position: relative;
    }

    .sticky-content {
      position: relative;
      height: auto;
      min-height: auto;
    }

    .scroll-column {
      background-color: #f4f4f4;
    }
  }

  @media (max-width: 768px) {
    .benefits-blog-section {
      padding: 0;
    }
  }

  /* Print styles */
  @media print {
    .sticky-grid {
      grid-template-columns: 1fr;
    }

    .sticky-content {
      position: relative;
      height: auto;
    }
  }
</style>
