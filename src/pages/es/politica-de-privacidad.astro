    min-height: 100vh;
    padding: 8rem 2rem 4rem;
    background: var(--color-white);
    font-family: var(--font-avenir);
  }
  .legal-container {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
  }
  h1 {
    font-family: var(--font-canela);
    font-size: 3rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
  }
  .update-date {
    color: var(--color-gray);
    margin-bottom: 3rem;
  }
  section {
    margin-bottom: 3rem;
  }
  h2 {
    font-family: var(--font-avenir);
    font-size: 1.5rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
    font-weight: 500;
  }
  p {
    margin-bottom: 1rem;
    color: var(--color-text);
  }
  ul {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }
  li {
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }
  @media (max-width: 768px) {
    .legal-page {
      padding: 6rem 1.5rem 3rem;
    }
    h1 {
      font-size: 2rem;
    }
    h2 {
      font-size: 1.25rem;
    }
  }
</style>
