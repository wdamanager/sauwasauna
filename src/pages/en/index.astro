---
/**
 * Homepage EN - SAUWA Landing Page
 * Opcion-2 hero + additional sections with opcion-2 typography
 */

import Layout from '../../layouts/Layout.astro';
import HeroSlider from '../../components/HeroSlider.astro';
import BenefitsSection from '../../components/BenefitsSection.astro';
import ExperienceSection from '../../components/ExperienceSection.astro';
import NewsletterForm from '../../components/NewsletterForm.astro';
import Footer from '../../components/layout/Footer.astro';

const lang = 'en';

// SEO metadata
const title = 'Finnish Sauna in Andorra | SAUWA: Wood-Fired + Cold Baths';
const description = 'Experience authentic Finnish wood-fired sauna and ice-cold water baths in the heart of Andorra\'s nature. Guided Nordic ritual to restore body and mind after skiing.';
---

<Layout title={title} description={description} lang={lang} pageType="homepage">

  <!-- Ambient Audio - Autoplay fire crackling sound (plays once) -->
  <audio autoplay muted id="ambient-audio">
    <source src="/audio/fire-crackling.mp3" type="audio/mpeg" />
  </audio>

  <!-- Hero Section - Full Screen with opcion-2 style -->
  <section class="hero-section">
    <!-- Background Slider -->
    <HeroSlider />

    <!-- Centered Content -->
    <div class="hero-content-wrapper">
      <!-- Logo -->
      <img
        src="/logos/sauwa-full-white.svg"
        alt="SAUWA"
        class="logo"
      />

      <!-- H1 - Smaller -->
      <h1 class="heading-primary text-2xl mb-1 animate-fade-in-up animation-delay-200">Sauna in Andorra</h1>

      <!-- H2 - Larger, Main headline -->
      <h2 class="heading-secondary text-4xl md:text-5xl leading-tight mb-12 animate-fade-in-up animation-delay-400">
        The first authentic Finnish wood-fired sauna and ice-cold water bath experience in the heart of nature.
      </h2>

      <!-- CTA Text -->
      <p class="text-cta text-lg mb-1 animate-fade-in-up animation-delay-600">Get priority access at our opening:</p>

      <!-- Newsletter Form -->
      <form class="newsletter-form" id="newsletter-form">
        <!-- Email Input -->
        <input
          type="email"
          name="email"
          placeholder="Enter your email…"
          required
          class="email-input"
        />

        <!-- Privacy Checkbox -->
        <label class="privacy-label">
          <input type="checkbox" name="privacy" required class="privacy-checkbox" />
          <span class="privacy-text">
            I have read and accept the
            <a href="/en/politica-de-privacidad" class="privacy-link">privacy policy</a>
            <span class="required-asterisk">*</span>
          </span>
        </label>

        <!-- Submit Button -->
        <button type="submit" class="submit-button">
          NOTIFY ME
        </button>
      </form>
    </div>

    <!-- Fixed UI Elements -->
    <!-- Language Selector - Top Left -->
    <div class="language-selector">
      <a href="/ca" class="lang-option">CA</a>
      <span class="separator">/</span>
      <a href="/es" class="lang-option">ES</a>
      <span class="separator">/</span>
      <a href="/fr" class="lang-option">FR</a>
      <span class="separator">/</span>
      <a href="/en" class="lang-option active">EN</a>
    </div>

    <!-- Instagram Icon - Top Right -->
    <a href="https://www.instagram.com/sauwa.ad/" target="_blank" rel="noopener noreferrer" class="instagram-link">
      <svg class="instagram-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
      </svg>
    </a>

    <!-- Copyright - Bottom Center -->
    <div class="copyright">
      © 2025 SAUWA. All rights reserved.
    </div>
  </section>

  <!-- Benefits Section -->
  <BenefitsSection locale={lang} />

  <!-- Experience Section -->
  <ExperienceSection locale={lang} />

  <!-- Newsletter Section -->
  <NewsletterForm locale={lang} />

  <!-- Footer -->
  <Footer locale={lang} />
</Layout>

<script>
  // Handle ambient audio with user interaction for browsers that require it
  document.addEventListener('DOMContentLoaded', () => {
    const audio = document.getElementById('ambient-audio') as HTMLAudioElement;

    if (audio) {
      // Remove muted attribute and set low volume for ambient effect
      audio.muted = false;
      audio.volume = 0.3; // 30% volume for ambient background

      // Try to play immediately
      const playPromise = audio.play();

      if (playPromise !== undefined) {
        playPromise.catch(() => {
          // If autoplay fails, play on first user interaction
          const playOnInteraction = () => {
            audio.play();
            document.removeEventListener('click', playOnInteraction);
            document.removeEventListener('touchstart', playOnInteraction);
          };

          document.addEventListener('click', playOnInteraction);
          document.addEventListener('touchstart', playOnInteraction);
        });
      }
    }
  });
</script>
